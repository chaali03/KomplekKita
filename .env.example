# Environment Configuration for KomplekKita
# Copy this file to .env for local development

# API Configuration
API_URL=http://127.0.0.1:8000
NODE_ENV=development

# External Services
NOMINATIM_URL=https://nominatim.openstreetmap.org
OPENSTREETMAP_TILES=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# CDN Fallbacks
CHART_JS_CDN=https://cdn.jsdelivr.net/npm/chart.js
FONT_AWESOME_CDN=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css
AOS_CDN=https://unpkg.com/aos@2.3.1/dist/aos.css
LOTTIE_CDN=https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js

# Production Settings
ENABLE_MOCK_API=true
ENABLE_ANALYTICS=false

# Supabase (Frontend)
# Astro exposes only variables prefixed with PUBLIC_.
PUBLIC_SUPABASE_URL=
PUBLIC_SUPABASE_ANON_KEY=

# Supabase (Server/Backend)
# Do NOT commit real values. Configure these in your deployment provider's env settings.
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_JWT_SECRET=
