---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/sections/Footer.astro';
---

<Layout>
    <section class="login-page">
        <!-- Background elements -->
        <div class="login-bg" aria-hidden="true">
            <!-- Animated waves -->
            <div class="waves-container">
                <div class="wave login-wave-1"></div>
                <div class="wave login-wave-2"></div>
                <div class="wave login-wave-3"></div>
            </div>

            <!-- Geometric shapes -->
            <div class="shapes">
                <div class="shape circle" data-aos="fade-in" data-aos-delay="200"></div>
                <div class="shape donut" data-aos="fade-in" data-aos-delay="400"></div>
                <div class="shape square" data-aos="fade-in" data-aos-delay="600"></div>
                <div class="shape triangle" data-aos="fade-in" data-aos-delay="800"></div>
            </div>

            <!-- Particle animations -->
            <div class="particles">
                <div class="particle particle-1"></div>
                <div class="particle particle-2"></div>
                <div class="particle particle-3"></div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="back-home-container">
            <a href="/" class="back-home-btn" data-aos="fade-down" data-aos-delay="100">
                <i class="fa-solid fa-arrow-left"></i>
                <span>Kembali ke Beranda</span>
            </a>
        </div>

        <div class="container">
            <div class="login-content">
                <div class="login-left" data-aos="fade-right" data-aos-duration="1000">
                    <!-- Welcome Section -->
                    <div class="welcome-section" data-aos="fade-up" data-aos-delay="200">
                        <h1 class="welcome-title">Selamat Datang</h1>
                    </div>

                    <div class="login-animation">
                        <div id="lottie-login"></div>
                    </div>
                </div>

                <div class="login-right" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="300">
                    <div class="login-form-container">
                        <div class="login-header">
                            <a href="/" class="logo-link">
                                <img src="/logo.svg" alt="KomplekKita Logo" class="logo" />
                                <span class="logo-text">KomplekKita</span>
                            </a>
                            <h2 class="form-title">Masuk ke Akun Anda</h2>
                            <p class="form-subtitle">Silakan masuk untuk mengakses akun Anda</p>
                        </div>

                        <form class="login-form">
                            <div class="form-group">
                                <label for="email" class="form-label">Email</label>
                                <div class="input-container">
                                    <i class="fa-solid fa-envelope input-icon"></i>
                                    <input type="email" id="email" name="email" class="form-input" placeholder="Masukkan email Anda" required />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-container">
                                    <i class="fa-solid fa-lock input-icon"></i>
                                    <input type="password" id="password" name="password" class="form-input" placeholder="Masukkan password Anda" required />
                                    <i class="fa-solid fa-eye toggle-password"></i>
                                </div>
                            </div>

                            <div class="form-options">
                                <div class="remember-me">
                                    <input type="checkbox" id="remember" name="remember" />
                                    <label for="remember">Ingat saya</label>
                                </div>
                                <a href="/forgot-password" class="forgot-password">Lupa password?</a>
                            </div>

                            <button type="submit" class="login-button">
                                <span class="button-text">Masuk</span>
                                <i class="fa-solid fa-arrow-right"></i>
                            </button>


                            <div class="register-link">
                                <p>Belum punya akun? <a href="/register">Daftar sekarang</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    .login-page {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
        padding: 2rem 0;
        display: flex;
        align-items: center;
        font-family: 'Poppins', sans-serif;
    }

    .login-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    /* Back to Home Button */
    .back-home-container {
        position: absolute;
        top: 2rem;
        left: 2rem;
        z-index: 10;
    }

    .back-home-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        color: #333;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .back-home-btn:hover {
        background: rgba(255, 255, 255, 1);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .back-home-btn i {
        font-size: 1rem;
        color: #4a6cf7;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        position: relative;
        z-index: 1;
    }

    .login-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 3rem;
    }

    .login-left {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }

    /* Welcome Section */
    .welcome-section {
        text-align: center;
        background: transparent;
        border-radius: 0;
        padding: 0;
        box-shadow: none;
        border: none;
        max-width: 100%;
        position: relative;
        overflow: visible;
        margin-bottom: 2rem;
    }

    .welcome-section::before {
        display: none;
    }

    .welcome-icon {
        display: none;
    }

    .welcome-title {
        font-size: 5rem;
        font-weight: 900;
        margin-bottom: 0;
        background: linear-gradient(135deg, #4a6cf7, #667eea, #764ba2, #f093fb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: 'Poppins', sans-serif;
        letter-spacing: -0.03em;
        line-height: 1;
        text-shadow: none;
        animation: none;
        position: relative;
        text-transform: uppercase;
        filter: drop-shadow(0 4px 8px rgba(74, 108, 247, 0.3));
        transition: all 0.3s ease;
        cursor: default;
    }

    .welcome-title:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 8px 16px rgba(74, 108, 247, 0.5));
    }

    .welcome-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #4a6cf7, #f093fb);
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .welcome-title:hover::after {
        width: 120px;
        height: 6px;
        background: linear-gradient(90deg, #f093fb, #4a6cf7);
    }

    .welcome-subtitle {
        display: none;
    }

    .welcome-decoration {
        display: none;
    }

    .welcome-message {
        display: none;
    }

    .login-animation {
        width: 100%;
        max-width: 400px;
    }

    #lottie-login {
        width: 100%;
        height: 300px;
    }

    .login-right {
        flex: 1;
        max-width: 500px;
    }

    .login-form-container {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo-link {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        margin-bottom: 1.5rem;
    }

    .logo {
        height: 40px;
        width: auto;
        margin-right: 0.5rem;
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
    }

    .form-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: #666;
        font-size: 0.9rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #333;
    }

    .input-container {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    .form-input {
        width: 100%;
        padding: 0.8rem 1rem 0.8rem 2.5rem;
        border: 1px solid #ddd;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        border-color: #4a6cf7;
        box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.2);
        outline: none;
    }

.toggle-password {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
        cursor: pointer;
        z-index: 2;
    }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
    }

    .remember-me input {
        margin-right: 0.5rem;
    }

    .forgot-password {
        color: #4a6cf7;
        text-decoration: none;
    }

    .login-button {
        width: 100%;
        padding: 0.8rem;
        background: #4a6cf7;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .login-button:hover {
        background: #3a5bd9;
        transform: translateY(-2px);
    }

    .login-button:active {
        transform: translateY(0);
    }

    .login-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: all 0.6s ease;
    }

    .login-button:hover::before {
        left: 100%;
    }

    .social-login {
        margin-top: 2rem;
        text-align: center;
    }

    .social-text {
        color: #666;
        margin-bottom: 1rem;
        position: relative;
    }

    .social-text::before,
    .social-text::after {
        content: '';
        position: absolute;
        top: 50%;
        width: 30%;
        height: 1px;
        background: #ddd;
    }

    .social-text::before {
        left: 0;
    }

    .social-text::after {
        right: 0;
    }

    .social-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .social-button {
        flex: 1;
        padding: 0.7rem;
        border: 1px solid #ddd;
        border-radius: 10px;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .social-button:hover {
        background: #f5f5f5;
        transform: translateY(-2px);
    }

    .google i {
        color: #DB4437;
    }

    .facebook i {
        color: #4267B2;
    }

    .register-link {
        margin-top: 1.5rem;
        text-align: center;
        font-size: 0.9rem;
    }

    .register-link a {
        color: #4a6cf7;
        font-weight: 600;
        text-decoration: none;
    }

    /* Waves Animation */
    .waves-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200%;
        height: 100px;
        background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="%234a6cf7"/></svg>') repeat-x;
        background-size: 1200px 100px;
        animation: wave 10s linear infinite;
    }

    .login-wave-1 {
        opacity: 0.3;
        animation-duration: 12s;
        bottom: 0;
    }

    .login-wave-2 {
        opacity: 0.2;
        animation-duration: 8s;
        animation-delay: -2s;
        bottom: 10px;
    }

    .login-wave-3 {
        opacity: 0.1;
        animation-duration: 6s;
        animation-delay: -4s;
        bottom: 20px;
    }

    @keyframes wave {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    /* Shapes Animation */
    .shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
    }

    .shape {
        position: absolute;
        opacity: 0.2;
    }

    .circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: #4a6cf7;
        top: 20%;
        left: 10%;
        animation: float 8s ease-in-out infinite;
    }

    .donut {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 15px solid #4a6cf7;
        top: 60%;
        right: 10%;
        animation: float 10s ease-in-out infinite;
    }

    .square {
        width: 60px;
        height: 60px;
        background: #4a6cf7;
        top: 30%;
        right: 20%;
        transform: rotate(45deg);
        animation: float 9s ease-in-out infinite;
    }

    .triangle {
        width: 0;
        height: 0;
        border-left: 40px solid transparent;
        border-right: 40px solid transparent;
        border-bottom: 70px solid #4a6cf7;
        top: 70%;
        left: 20%;
        animation: float 7s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* Particles Animation */
    .particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .particle {
        position: absolute;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(74, 108, 247, 0.3);
    }

    .particle-1 {
        top: 20%;
        left: 20%;
        animation: particle-move 20s linear infinite;
    }

    .particle-2 {
        top: 40%;
        left: 60%;
        animation: particle-move 25s linear infinite;
        animation-delay: -5s;
    }

    .particle-3 {
        top: 70%;
        left: 80%;
        animation: particle-move 30s linear infinite;
        animation-delay: -10s;
    }

    @keyframes particle-move {
        0% {
            transform: translate(0, 0);
        }
        25% {
            transform: translate(100px, 50px);
        }
        50% {
            transform: translate(50px, 100px);
        }
        75% {
            transform: translate(-50px, 50px);
        }
        100% {
            transform: translate(0, 0);
        }
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
        .login-content {
            flex-direction: column;
            gap: 2rem;
        }

        .login-left, .login-right {
            max-width: 100%;
        }

        .welcome-section {
            max-width: 100%;
            padding: 0;
            margin-bottom: 1.5rem;
        }

        .welcome-title {
            font-size: 4rem;
        }

        .login-animation {
            max-width: 400px;
            margin: 0 auto;
        }

        #lottie-login {
            height: 300px;
        }

        .back-home-container {
            position: relative;
            top: 0;
            left: 0;
            margin-bottom: 1rem;
            text-align: center;
        }
    }

    @media (max-width: 576px) {
        .login-form-container {
            padding: 1.5rem;
        }

        .welcome-section {
            padding: 1.5rem;
        }

        .welcome-title {
            font-size: 3rem;
        }

        .form-title {
            font-size: 1.5rem;
        }

        .social-buttons {
            flex-direction: column;
        }

        #lottie-login {
            height: 250px;
        }
    }
</style>

<script>
    // Initialize AOS Animation Library
    document.addEventListener('DOMContentLoaded', function() {
        AOS.init({
            duration: 1000,
            once: true
        });

        // Initialize Lottie Animation
        const loginAnimation = lottie.loadAnimation({
            container: document.getElementById('lottie-login'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/animations/hero-building.json'
        });

        // Toggle password visibility (eye open = masked, eye slash = visible)
        const toggles = document.querySelectorAll('.toggle-password');
        toggles.forEach(icon => {
            const container = icon.closest('.input-container');
            const input = container ? container.querySelector('input.form-input') : null;
            if (!input) return;

            // Initial state: masked
            input.setAttribute('type', 'password');
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
            icon.setAttribute('role', 'button');
            icon.setAttribute('tabindex', '0');
            icon.setAttribute('aria-pressed', 'false');
            icon.setAttribute('title', 'Tampilkan password');

            const toggle = () => {
                const masked = input.getAttribute('type') === 'password';
                input.setAttribute('type', masked ? 'text' : 'password');
                if (masked) {
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
                icon.setAttribute('aria-pressed', String(masked));
                icon.setAttribute('title', masked ? 'Sembunyikan password' : 'Tampilkan password');
            };

            icon.addEventListener('click', toggle);
            icon.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    toggle();
                }
            });
        });

        // Form submission animation
        const loginForm = document.querySelector('.login-form');
        const loginButton = document.querySelector('.login-button');

        if (loginForm && loginButton) {
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Add loading state
                loginButton.classList.add('loading');
                loginButton.innerHTML = '<span class="button-text">Memproses...</span><i class="fa-solid fa-spinner fa-spin"></i>';
                
                // Simulate form submission (replace with actual form submission)
                setTimeout(() => {
                    // Reset button state
                    loginButton.classList.remove('loading');
                    loginButton.innerHTML = '<span class="button-text">Masuk</span><i class="fa-solid fa-arrow-right"></i>';
                    
                    // Redirect or show success message
                    // window.location.href = '/dashboard';
                }, 2000);
            });
        }

        // GSAP Animations
        gsap.from('.welcome-section', {
            y: 30,
            opacity: 0,
            duration: 1,
            ease: 'power3.out'
        });

        gsap.from('.login-form-container', {
            y: 50,
            opacity: 0,
            duration: 1,
            ease: 'power3.out',
            delay: 0.3
        });

        gsap.from('.form-group', {
            y: 20,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: 'power3.out',
            delay: 0.8
        });
    });
</script>