<script>
    // TypeScript declarations for external libraries
    declare const AOS: any;
    declare const lottie: any;
    declare const gsap: any;
    
    // Initialize animations when document is ready
    document.addEventListener('DOMContentLoaded', function() {
        // Check if AOS is available before initializing
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 1000,
                once: true
            });
        }

        // Initialize Lottie Animation if available
        if (typeof lottie !== 'undefined' && document.getElementById('lottie-login')) {
            const loginAnimation = lottie.loadAnimation({
                container: document.getElementById('lottie-login'),
                renderer: 'svg',
                loop: true,
                autoplay: true,
                path: '/animations/hero-building.json'
            });
        }

        // Toggle password visibility (eye open = masked, eye slash = visible)
        const toggles = document.querySelectorAll('.toggle-password');
        toggles.forEach(icon => {
            const container = icon.closest('.input-container');
            const input = container ? container.querySelector('input.form-input') : null;
            if (!input) return;

            // Initial state: masked
            input.setAttribute('type', 'password');
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
            icon.setAttribute('role', 'button');
            icon.setAttribute('tabindex', '0');
            icon.setAttribute('aria-pressed', 'false');
            icon.setAttribute('title', 'Tampilkan password');

            const toggle = () => {
                const masked = input.getAttribute('type') === 'password';
                input.setAttribute('type', masked ? 'text' : 'password');
                if (masked) {
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
                icon.setAttribute('aria-pressed', String(masked));
                icon.setAttribute('title', masked ? 'Sembunyikan password' : 'Tampilkan password');
            };

            icon.addEventListener('click', toggle);
            icon.addEventListener('keydown', (e: Event) => {
                const keyEvent = e as KeyboardEvent;
                if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
                    e.preventDefault();
                    toggle();
                }
            });
        });

        // Form submission animation
        const loginForm = document.querySelector('.login-form');
        const loginButton = document.querySelector('.login-button');

        if (loginForm && loginButton) {
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Add loading state
                loginButton.classList.add('loading');
                loginButton.innerHTML = '<span class="button-text">Memproses...</span><i class="fa-solid fa-spinner fa-spin"></i>';
                
                // Simulate form submission (replace with actual form submission)
                setTimeout(() => {
                    // Reset button state
                    loginButton.classList.remove('loading');
                    loginButton.innerHTML = '<span class="button-text">Masuk</span><i class="fa-solid fa-arrow-right"></i>';
                    
                    // Redirect or show success message
                    // window.location.href = '/dashboard';
                }, 2000);
            });
        }

        // Enhanced GSAP Animations - only run if GSAP is available
        if (typeof gsap !== 'undefined') {
            const timeline = gsap.timeline();
            
            timeline.from('.back-home-btn', {
                y: -20,
                opacity: 0,
                duration: 0.8,
                ease: 'power3.out'
            });
            
            timeline.from('.welcome-section', {
                y: 30,
                opacity: 0,
                duration: 1,
                ease: 'power3.out'
            }, "-=0.4");
            
            timeline.from('.login-animation', {
                scale: 0.9,
                opacity: 0,
                duration: 1.2,
                ease: 'elastic.out(1, 0.5)'
            }, "-=0.6");

            timeline.from('.login-form-container', {
                y: 50,
                opacity: 0,
                duration: 1,
                ease: 'power3.out',
            }, "-=0.8");
            
            timeline.from('.login-header', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                ease: 'power3.out',
            }, "-=0.6");

            timeline.from('.form-group', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                stagger: 0.15,
                ease: 'power3.out',
            }, "-=0.4");
            
            timeline.from('.form-options', {
                y: 15,
                opacity: 0,
                duration: 0.6,
                ease: 'power3.out',
            }, "-=0.2");
            
            timeline.from('.login-button', {
                scale: 0.9,
                opacity: 0,
                duration: 0.8,
                ease: 'back.out(1.7)',
            }, "-=0.3");
            
            timeline.from('.register-link', {
                y: 15,
                opacity: 0,
                duration: 0.6,
                ease: 'power3.out',
            }, "-=0.4");
        } else {
            // Fallback simple animations if GSAP is not available
            const elements = [
                '.back-home-btn', '.welcome-section', '.login-animation',
                '.login-form-container', '.login-header', '.form-group',
                '.form-options', '.login-button', '.register-link'
            ];
            
            elements.forEach(selector => {
                const items = document.querySelectorAll(selector);
                items.forEach(item => {
                    (item as HTMLElement).style.opacity = '0';
                    setTimeout(() => {
                        (item as HTMLElement).style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                        (item as HTMLElement).style.opacity = '1';
                    }, 100);
                });
            });
        }
    });
