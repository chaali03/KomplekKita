  <script>
    // Global error handlers (dipasang sedini mungkin) untuk mencegah spam "Uncaught (in promise) Object"
    // dari extension browser atau script pihak ketiga sebelum DOMContentLoaded
    window.addEventListener('unhandledrejection', (event) => {
      // Cegah error default di console
      event.preventDefault();
    });

    window.addEventListener('error', () => {
      // Biarkan UI halaman menangani notifikasi; hindari spam console dari pihak ketiga
    });

    // Animasi scroll dan interaksi
    document.addEventListener('DOMContentLoaded', function() {
      // Fungsi untuk animasi scroll
      function animateOnScroll() {
        const elements = document.querySelectorAll('.plan-card, .faq-item, .comparison-table, .cta-container');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });
        
        elements.forEach(el => {
          observer.observe(el);
        });
      }
      
      // Fungsi untuk interaksi FAQ
      function setupFaqInteraction() {
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
          const question = item.querySelector('.faq-question');
          
          if (!question) return;
          
          const icon = question.querySelector('.question-icon');
          
          question.addEventListener('click', () => {
            const isOpen = item.classList.contains('active');
            
            // Tutup semua FAQ yang terbuka
            document.querySelectorAll('.faq-item.active').forEach(openItem => {
              if (openItem !== item) {
                openItem.classList.remove('active');
                const questionIcon = openItem.querySelector('.question-icon');
                if (questionIcon) {
                  questionIcon.classList.remove('fa-minus-circle');
                  questionIcon.classList.add('fa-plus-circle');
                }
              }
            });
            
            // Toggle FAQ yang diklik
            item.classList.toggle('active');
            
            if (icon) {
              if (isOpen) {
                icon.classList.remove('fa-minus-circle');
                icon.classList.add('fa-plus-circle');
              } else {
                icon.classList.remove('fa-plus-circle');
                icon.classList.add('fa-minus-circle');
              }
            }
          });
        });
      }
      
      // Fungsi untuk efek hover pada plan cards
      function setupPlanCardEffects() {
        const planCards = document.querySelectorAll('.plan-card');
        
        planCards.forEach(card => {
          card.addEventListener('mouseenter', () => {
            planCards.forEach(c => {
              if (c !== card) c.classList.add('dimmed');
            });
          });
          
          card.addEventListener('mouseleave', () => {
            planCards.forEach(c => {
              c.classList.remove('dimmed');
            });
          });
        });
      }
      
      // Fungsi untuk smooth scroll
      function setupSmoothScroll() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function(e) {
            e.preventDefault();

            const self = e.currentTarget;
            if (!(self instanceof HTMLAnchorElement)) return;
            const targetId = self.getAttribute('href');
            if (!targetId) return;

            const targetElement = document.querySelector(targetId);

            if (targetElement instanceof HTMLElement) {
              window.scrollTo({
                top: targetElement.offsetTop - 80,
                behavior: 'smooth'
              });
            }
          });
        });
      }
      
      // Fungsi untuk scroll to top button
      function setupScrollToTop() {
        const scrollTopBtn = document.querySelector('.scroll-top');
        
        if (!scrollTopBtn) return;
        
        window.addEventListener('scroll', () => {
          if (window.pageYOffset > 300) {
            scrollTopBtn.classList.add('visible');
          } else {
            scrollTopBtn.classList.remove('visible');
          }
        });
        
        scrollTopBtn.addEventListener('click', () => {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });
      }
      
      // Inisialisasi semua fungsi
      animateOnScroll();
      setupFaqInteraction();
      setupPlanCardEffects();
      setupSmoothScroll();
      setupScrollToTop();
      
      // Tambahkan event listener untuk error 403
      document.querySelectorAll('.upgrade-button').forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const self = e.currentTarget;
          if (!(self instanceof HTMLAnchorElement)) return;
          const url = self.getAttribute('href');
          if (!url) return;
          // Navigasi langsung tanpa fetch untuk menghindari CORS/promise rejection
          try {
            window.location.href = url;
          } catch (err) {
            showErrorNotification('Gagal membuka halaman. Silakan coba lagi.');
          }
        });
      });
      
      // Fungsi untuk menampilkan notifikasi error
      function showErrorNotification(message: string) {
        const notification = document.createElement('div');
        notification.className = 'error-notification';
        notification.innerHTML = `
          <div class="error-content">
            <i class="fas fa-exclamation-circle"></i>
            <span>${message}</span>
          </div>
          <button class="error-close"><i class="fas fa-times"></i></button>
        `;
        
        document.body.appendChild(notification);
        
        // Animasi masuk
        setTimeout(() => {
          notification.classList.add('show');
        }, 10);
        
        // Tutup notifikasi setelah 5 detik
        setTimeout(() => {
          notification.classList.remove('show');
          setTimeout(() => {
            notification.remove();
          }, 300);
        }, 5000);
        
        // Tombol tutup
        const closeBtn = notification.querySelector('.error-close');
        if (closeBtn) {
          closeBtn.addEventListener('click', () => {
            notification.classList.remove('show');
            setTimeout(() => {
              notification.remove();
            }, 300);
          });
        }
      }
      // (Opsional) Di tahap ini kita tidak menambah handler global lagi agar tidak duplikasi.
    });
    
    // Fungsi untuk menangani error 403
    function handleFetchError(error: unknown) {
      console.error('Error:', error);
    }
  </script>
