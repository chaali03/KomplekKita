---
import Layout from "~/layouts/admin-layout.astro";
import AdminSidebar from '../../components/Admin-site/admin-sidebar.astro';
import AdminTopbar from '../../components/Admin-site/admin-topbar.astro';
---

<Layout>
  <AdminSidebar slot="sidebar" />
  <AdminTopbar slot="topbar" />

  <div class="upgrade-page">
  <section class="upgrade-hero">
    <div class="hero-inner">
      <div class="hero-content">
        <h1>Tingkatkan Akun Anda</h1>
        <p>Akses fitur-fitur premium untuk mengelola kompleks Anda dengan lebih efisien dan profesional.</p>
      </div>
      <a href="/admin" class="back-button">
        <i class="fas fa-arrow-left"></i> Kembali ke Dashboard
      </a>
    </div>
  </section>

  <section class="plans-section">
    <div class="section-header">
      <h2>Pilih Paket yang Sesuai</h2>
      <p>Bandingkan paket dan pilih yang terbaik untuk kebutuhan kompleks Anda</p>
    </div>
    
    <div class="plans-grid">
      <div class="plan-card free">
        <div class="plan-header">
          <div class="plan-badge">Saat Ini</div>
          <h3>Free</h3>
          <div class="plan-price">
            <span class="price">Rp 0</span>
            <span class="period">/bulan</span>
          </div>
        </div>
        <div class="plan-features">
          <ul>
            <li><i class="fas fa-check"></i> Dashboard dasar</li>
            <li><i class="fas fa-check"></i> Pencatatan kas masuk & keluar</li>
            <li><i class="fas fa-check"></i> Laporan keuangan bulanan</li>
            <li><i class="fas fa-check"></i> Manajemen program</li>
            <li><i class="fas fa-check"></i> Informasi kompleks</li>
            <li class="disabled"><i class="fas fa-times"></i> Grafik interaktif</li>
            <li class="disabled"><i class="fas fa-times"></i> Export laporan</li>
          </ul>
        </div>
        <div class="plan-footer">
          <span class="current-plan">Paket Anda Saat Ini</span>
        </div>
      </div>

      <div class="plan-card premium">
        <div class="plan-header">
          <div class="plan-badge">Populer</div>
          <h3>Premium</h3>
          <div class="plan-price">
            <span class="price">Rp 99.000</span>
            <span class="period">/bulan</span>
          </div>
        </div>
        <div class="plan-features">
          <ul>
            <li><i class="fas fa-check"></i> Semua fitur Free</li>
            <li><i class="fas fa-check"></i> Grafik kas interaktif</li>
            <li><i class="fas fa-check"></i> Export laporan (PDF/Excel)</li>
            <li><i class="fas fa-check"></i> Reminder pembayaran iuran</li>
            <li><i class="fas fa-check"></i> Tracking status surat</li>
            <li><i class="fas fa-check"></i> Tandatangan digital</li>
            <li><i class="fas fa-check"></i> Verifikasi dokumen (KTP/KK)</li>
          </ul>
        </div>
        <div class="plan-footer">
          <a href="/kontak" class="upgrade-button premium-btn">
            <i class="fas fa-arrow-up"></i> Upgrade ke Premium
          </a>
        </div>
      </div>

      <div class="plan-card plus">
        <div class="plan-header">
          <div class="plan-badge">Diskon 20%</div>
          <h3>Plus</h3>
          <div class="plan-price">
            <span class="old-price">Rp 150.000</span>
            <span class="price">Rp 119.000</span>
            <span class="period">/bulan</span>
          </div>
        </div>
        <div class="plan-features">
          <ul>
            <li><i class="fas fa-check"></i> Semua fitur Premium</li>
            <li><i class="fas fa-plus"></i> Analitik keuangan lanjutan</li>
            <li><i class="fas fa-plus"></i> Integrasi WhatsApp/Email</li>
            <li><i class="fas fa-plus"></i> Dashboard analisa data warga</li>
            <li><i class="fas fa-plus"></i> Multi-user (hingga 5 pengguna)</li>
            <li><i class="fas fa-plus"></i> Dukungan prioritas 24/7</li>
            <li><i class="fas fa-plus"></i> Aplikasi mobile</li>
          </ul>
        </div>
        <div class="plan-footer">
          <a href="/kontak" class="upgrade-button plus-btn">
            <i class="fas fa-arrow-up"></i> Upgrade ke Plus
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="comparison-section">
    <div class="section-header">
      <h2>Perbandingan Fitur</h2>
      <p>Lihat perbedaan detail antara paket Free, Premium, dan Plus</p>
    </div>
    
    <div class="comparison-table">
      <table>
        <thead>
          <tr>
            <th>Fitur</th>
            <th>Free</th>
            <th>Premium</th>
            <th>Plus</th>
          </tr>
        </thead>
        <tbody>
          <tr class="category-row">
            <td colspan="4">Dasar</td>
          </tr>
          <tr>
            <td>Dashboard</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Pencatatan Kas</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Laporan Bulanan</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          
          <tr class="category-row">
            <td colspan="4">Visualisasi & Laporan</td>
          </tr>
          <tr>
            <td>Grafik Interaktif</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Export Laporan (PDF/Excel)</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Analitik Lanjutan</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          
          <tr class="category-row">
            <td colspan="4">Fitur Tambahan</td>
          </tr>
          <tr>
            <td>Reminder Iuran</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Tracking Status Surat</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Tandatangan Digital</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Integrasi WhatsApp/Email</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Multi-user</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Aplikasi Mobile</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          
          <tr class="category-row">
            <td colspan="4">Dukungan</td>
          </tr>
          <tr>
            <td>Email Support</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>Dukungan Prioritas</td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-times"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
  
  <section class="faq-section">
    <div class="section-header">
      <h2>Pertanyaan Umum</h2>
      <p>Jawaban untuk pertanyaan yang sering diajukan</p>
    </div>
    
    <div class="faq-grid">
      <div class="faq-item">
        <h4>Bagaimana cara upgrade ke Premium?</h4>
        <p>Klik tombol "Upgrade ke Premium" dan isi formulir kontak. Tim kami akan menghubungi Anda untuk proses pembayaran dan aktivasi.</p>
      </div>
      
      <div class="faq-item">
        <h4>Apakah saya bisa downgrade ke Free?</h4>
        <p>Ya, Anda dapat downgrade kapan saja. Fitur premium akan tetap aktif sampai akhir periode berlangganan Anda.</p>
      </div>
      
      <div class="faq-item">
        <h4>Apakah ada kontrak jangka panjang?</h4>
        <p>Tidak, semua paket berbasis langganan bulanan dan dapat dibatalkan kapan saja.</p>
      </div>
      
      <div class="faq-item">
        <h4>Metode pembayaran apa yang tersedia?</h4>
        <p>Kami menerima transfer bank, kartu kredit, dan e-wallet (GoPay, OVO, DANA).</p>
      </div>
    </div>
  </section>
</div>

  <section class="cta-section">
    <div class="cta-container">
      <div class="cta-content">
        <h2>Butuh penjelasan cepat?</h2>
        <p>Kami bantu rekomendasikan paket terbaik sesuai kondisi RT/RW Anda.</p>
        <div class="cta-actions">
          <a href="/kontak" class="cta-button primary">
            <i class="fas fa-headset"></i> Hubungi Kami
          </a>
          <a href="/admin" class="cta-button ghost">
            <i class="fas fa-tachometer-alt"></i> Lihat Dashboard
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .card { background: #fff; border: 1px solid #e5e7eb; border-radius: 16px; box-shadow: 0 8px 24px rgba(0,0,0,.06); }

    .upgrade-hero { padding: 16px; }
    .hero-inner { margin: 8px auto 0; padding: 20px clamp(16px, 3vw, 28px); display: flex; align-items: center; justify-content: space-between; gap: 12px; }
    .ghost-btn { text-decoration: none; color: #2563eb; font-weight: 700; border: 1px solid #bfdbfe; padding: 10px 14px; border-radius: 10px; background: #f0f7ff; }

    .plans { padding: 20px; }
    .plans-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 16px; max-width: 1100px; margin: 0 auto; }
    .plan-card { position: relative; padding: 18px; }
    .plan-card .badge { position: absolute; top: 12px; right: 12px; background: #ea580c; color: #fff; padding: 4px 10px; border-radius: 999px; font-weight: 700; font-size: .8rem; }
    .plan-card.featured { outline: 2px solid #f97316; }
    .plan-head h3 { margin: 0 0 6px 0; font-weight: 800; }
    .price { display: flex; align-items: baseline; gap: 8px; }
    .price .val { font-weight: 800; font-size: 1.6rem; color: #2563eb; }
    .price .per { color: #64748b; }
    .price .old { color: #ef4444; text-decoration: line-through; font-weight: 700; margin-right: 4px; }
    .features { list-style: none; padding: 0; margin: 14px 0; display: grid; gap: 8px; }
    .features i { width: 22px; height: 22px; display: inline-grid; place-items: center; border-radius: 6px; margin-right: 8px; font-size: .85rem; }
    .features .fa-check { color: #16a34a; background: #f0fdf4; }
    .features .fa-plus { color: #2563eb; background: #f0f7ff; }
    .features .fa-times { color: #6b7280; background: #f3f4f6; }
    .plan-cta { margin-top: 10px; }

    .btn { display: inline-block; text-decoration: none; font-weight: 700; border-radius: 10px; padding: 10px 16px; }
    .btn.primary { color: #fff; background: linear-gradient(135deg, #2563eb, #1d4ed8); box-shadow: 0 10px 20px rgba(37,99,235,.25); }
    .btn.outline { color: #2563eb; border: 2px solid #2563eb; background: #fff; }
    .btn.ghost { color: #2563eb; background: #eef6ff; border: 1px solid #bfdbfe; }

    .comparison { margin: 8px 20px; padding: 18px; }
    .comparison h3 { margin: 0 0 10px 0; }
    .table { display: grid; gap: 8px; }
    .row { display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 8px; padding: 10px; border-radius: 12px; border: 1px solid #e5e7eb; }
    .row.head { font-weight: 800; background: #f8fafc; }
    .row i { width: 22px; height: 22px; display: inline-grid; place-items: center; border-radius: 6px; font-size: .85rem; }

    .cta { margin: 12px 20px 40px; padding: 18px; display: grid; align-items: center; grid-template-columns: 1fr auto; gap: 12px; }
    .cta-actions { display: flex; align-items: center; gap: 8px; }

    @media (max-width: 768px) {
      .hero-inner { flex-direction: column; align-items: flex-start; }
      .row { grid-template-columns: 1fr 1fr 1fr 1fr; }
      .cta { grid-template-columns: 1fr; }
    }
  </style>
</Layout>
