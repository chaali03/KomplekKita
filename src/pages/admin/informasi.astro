      // Seed default tags if missing
      if (!Array.isArray(readTags()) || readTags().length === 0) {
        writeTags(['Umum','Keamanan','Lingkungan','Acara']);
      }

      // Tag helpers
      function ensureUniqueName(name) {
        const n = (name || '').trim();
        if (!n) return null;
        const tags = readTags();
        if (tags.some(t => t.toLowerCase() === n.toLowerCase())) return null;
        return n;
      }

      function populateCategorySelect() {
        if (!inputCategory) return;
        const tags = readTags();
        inputCategory.innerHTML = '';
        tags.forEach(tag => {
          const opt = document.createElement('option');
          opt.value = tag; opt.textContent = tag; inputCategory.appendChild(opt);
        });
      }

      function renderTagChips() {
        if (!tagChipsHost) return;
        const tags = readTags();
        tagChipsHost.innerHTML = '';
        tags.forEach(tag => {
          const btn = document.createElement('button');
          btn.className = 'chip pressable';
          btn.setAttribute('data-cat', tag);
          btn.innerHTML = `<i class="fas fa-tag"></i> ${tag}`;
          tagChipsHost.appendChild(btn);
