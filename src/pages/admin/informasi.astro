            if (current.length <= 1) { showToast('Minimal satu kategori harus ada'); return; }
            const arr = current.filter(t => t !== tag);
            writeTags(arr);
            // reassign infos using deleted tag -> 'Umum'
            const infos = readData();
            infos.forEach(it => { if (it.category === tag) it.category = 'Umum'; });
            writeData(infos);
            if (activeCat === tag) { activeCat = 'all'; }
            renderTagList(); renderTagChips(); populateCategorySelect(); setActiveChips(); render(searchInput?.value || '');
            updateStats(infos);
            showToast('Kategori dihapus');
          });
          tagList.appendChild(li);
        });
      }

      // Tag modal interactions
      tagModal?.addEventListener('click', (e) => {
