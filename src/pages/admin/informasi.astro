      function closeTagModal() {
        tagModal.classList.remove('show');
        tagModal.setAttribute('aria-hidden','true');
      }
      function renderTagList() {
        if (!tagList) return;
        const tags = readTags();
        tagList.innerHTML = '';
        tags.forEach((tag) => {
          const li = document.createElement('div');
          li.className = 'tag-item';
          li.innerHTML = `
            <span class="tag-name">${tag}</span>
            <div class="tag-actions">
              <button class="btn light sm pressable" data-edit><i class="fas fa-edit"></i></button>
              <button class="btn danger sm pressable" data-delete><i class="fas fa-trash"></i></button>
            </div>`;
          // edit
          li.querySelector('[data-edit]')?.addEventListener('click', () => {
            const current = tag;
            const input = document.createElement('input');
            input.type = 'text'; input.value = current; input.className = 'tag-edit-input';
            li.querySelector('.tag-name').replaceWith(input);
            input.focus();
            const save = () => {
              const newName = ensureUniqueName(input.value);
              if (!newName) { showToast('Nama tidak valid/duplikat'); return; }
              const arr = readTags();
              const idx = arr.indexOf(current);
              if (idx >= 0) { arr[idx] = newName; writeTags(arr); }
              // migrate info items categories
              const infos = readData();
              infos.forEach(it => { if (it.category === current) it.category = newName; });
              writeData(infos);
              if (activeCat === current) { activeCat = newName; }
              renderTagList(); renderTagChips(); populateCategorySelect(); render(searchInput?.value || '');
              updateStats(infos);
              showToast('Kategori diperbarui');
            };
            input.addEventListener('keydown', (e) => { if (e.key === 'Enter') save(); if (e.key === 'Escape') renderTagList(); });
