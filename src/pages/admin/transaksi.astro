    function animateNumber(el, to, format=(n)=>n){
      if(!el) return;
      
      // Use enhanced animation system if available
      if (window.animateValueAccessible) {
        window.animateValueAccessible(el, to, format, {
          duration: 500, // Faster animation
          easing: 'easeOutSmooth',
          visualEffects: true,
          onStart: () => {
            el.style.opacity = '0.8';
            el.style.transform = 'scale(0.98)';
          },
          onComplete: () => {
            el.style.opacity = '1';
            el.style.transform = 'scale(1)';
            el.style.transition = 'all 0.2s ease';
            el.dataset.val = String(to);
          }
        });
        return;
      }
      
      // Check if this is the first visit to this page
      function isFirstVisit(pageName) {
        const visitKey = `visited_${pageName}`;
        const hasVisited = localStorage.getItem(visitKey) === 'true';
        if (!hasVisited) {
          localStorage.setItem(visitKey, 'true');
          return true;
        }
        return false;
      }
      
      const reduceMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const isFirstTime = isFirstVisit('admin_transaksi');
      
      if(reduceMotion || !isFirstTime){ 
        el.textContent = format(to); 
        el.dataset.val = String(to);
        return; 
      }

      const from = Number(String(el.dataset.val||'0')) || 0;
      const start = performance.now();
      const duration = 1000;
      
      function step(t){
        const p = Math.min(1, (t-start)/duration);
        const eased = 1 - Math.pow(1-p, 3); // easeOutCubic
        const val = Math.round(from + (to - from)*eased);
        el.textContent = format(val);
        
        // Add visual effects
        if (p < 1) {
          const scale = 1 + (Math.sin(p * Math.PI) * 0.05);
          el.style.transform = `scale(${scale})`;
        }
        
        if(p<1) requestAnimationFrame(step);
        else {
          el.dataset.val = String(to);
          el.style.transform = 'scale(1)';
        }
      }
      requestAnimationFrame(step);
    }

    // Compatibility: expose laporan-style animator if not available
