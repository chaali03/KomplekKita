---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/sections/Footer.astro';
---

<Layout>
    <section class="forgot-page">
        <!-- Background elements (reuse style cues from login/register) -->
        <div class="forgot-bg" aria-hidden="true">
            <div class="waves-container">
                <div class="wave forgot-wave-1"></div>
                <div class="wave forgot-wave-2"></div>
                <div class="wave forgot-wave-3"></div>
            </div>

            <div class="shapes">
                <div class="shape blob" data-aos="fade-in" data-aos-delay="200"></div>
                <div class="shape dot" data-aos="fade-in" data-aos-delay="400"></div>
                <div class="shape diamond" data-aos="fade-in" data-aos-delay="600"></div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="back-home-container">
            <a href="/" class="back-home-btn" data-aos="fade-down" data-aos-delay="100">
                <i class="fa-solid fa-arrow-left"></i>
                <span>Kembali ke Beranda</span>
            </a>
        </div>

        <div class="container">
            <div class="forgot-content" data-aos="fade-up" data-aos-duration="1000">
                <div class="forgot-form-container">
                    <div class="forgot-header">
                        <a href="/" class="logo-link">
                            <img src="/logo.svg" alt="KomplekKita Logo" class="logo" />
                            <span class="logo-text">KomplekKita</span>
                        </a>
                        <h1 class="form-title">Reset Password</h1>
                        <p class="form-subtitle">Masukkan email Anda. Kami akan mengirimkan tautan untuk mengatur ulang password.</p>
                    </div>

                    <form class="forgot-form">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-container">
                                <i class="fa-solid fa-envelope input-icon"></i>
                                <input type="email" id="email" name="email" class="form-input" placeholder="Masukkan email Anda" required />
                            </div>
                        </div>

                        <button type="submit" class="forgot-button">
                            <span class="button-text">Kirim Tautan Reset</span>
                            <i class="fa-solid fa-paper-plane"></i>
                        </button>

                        <div class="back-to-login">
                            <p>Ingat password? <a href="/login">Masuk sekarang</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    .forgot-page {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
        padding: 2rem 0;
        display: flex;
        align-items: center;
        font-family: 'Poppins', sans-serif;
    }

    .forgot-bg {
        position: absolute;
        inset: 0;
        z-index: -1;
        overflow: hidden;
    }

    .back-home-container {
        position: absolute;
        top: 2rem;
        left: 2rem;
        z-index: 10;
    }

    .back-home-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        color: #333;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .back-home-btn:hover { background: rgba(255, 255, 255, 1); transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); }
    .back-home-btn i { font-size: 1rem; color: #4a6cf7; }

    .container { width: 100%; max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; position: relative; z-index: 1; }

    .forgot-content { display: flex; justify-content: center; }

    .forgot-form-container {
        width: 100%;
        max-width: 500px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .forgot-header { text-align: center; margin-bottom: 2rem; }
    .logo-link { display: inline-flex; align-items: center; text-decoration: none; margin-bottom: 1.5rem; }
    .logo { height: 40px; width: auto; margin-right: 0.5rem; }
    .logo-text { font-size: 1.5rem; font-weight: 700; color: #333; }
    .form-title { font-size: 1.8rem; font-weight: 700; color: #333; margin-bottom: 0.5rem; }
    .form-subtitle { color: #666; font-size: 0.9rem; }

    .form-group { margin-bottom: 1.5rem; }
    .form-label { display: block; margin-bottom: 0.5rem; font-weight: 500; color: #333; }

    .input-container { position: relative; }
    .input-icon { position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: #666; }
    .form-input { width: 100%; padding: 0.8rem 1rem 0.8rem 2.5rem; border: 1px solid #ddd; border-radius: 10px; font-size: 1rem; transition: all 0.3s ease; }
    .form-input:focus { border-color: #4a6cf7; box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.2); outline: none; }

    .forgot-button { width: 100%; padding: 0.8rem; background: #4a6cf7; color: white; border: none; border-radius: 10px; font-size: 1rem; font-weight: 600; cursor: pointer; display: flex; justify-content: center; align-items: center; gap: 0.5rem; transition: all 0.3s ease; position: relative; overflow: hidden; }
    .forgot-button:hover { background: #3a5bd9; transform: translateY(-2px); }
    .forgot-button:active { transform: translateY(0); }
    .forgot-button::before { content: ''; position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent); transition: all 0.6s ease; }
    .forgot-button:hover::before { left: 100%; }

    /* Waves & shapes (match theme) */
    .waves-container { position: absolute; bottom: 0; left: 0; width: 100%; height: 100%; overflow: hidden; }
    .wave { position: absolute; bottom: 0; left: 0; width: 200%; height: 100px; background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="%234a6cf7"/></svg>') repeat-x; background-size: 1200px 100px; animation: wave 10s linear infinite; }
    .forgot-wave-1 { opacity: 0.3; animation-duration: 12s; bottom: 0; }
    .forgot-wave-2 { opacity: 0.2; animation-duration: 8s; animation-delay: -2s; bottom: 10px; }
    .forgot-wave-3 { opacity: 0.1; animation-duration: 6s; animation-delay: -4s; bottom: 20px; }
    @keyframes wave { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }

    .shapes { position: absolute; inset: 0; overflow: hidden; z-index: -1; }
    .shape { position: absolute; opacity: 0.2; }
    .blob { width: 120px; height: 100px; background: #4a6cf7; top: 15%; left: 12%; border-radius: 50% 40% 60% 50%/50% 60% 40% 50%; animation: float 9s ease-in-out infinite; }
    .dot { width: 16px; height: 16px; background: #4a6cf7; border-radius: 50%; top: 65%; right: 15%; animation: float 7s ease-in-out infinite; }
    .diamond { width: 60px; height: 60px; background: #4a6cf7; transform: rotate(45deg); top: 35%; right: 25%; animation: float 8s ease-in-out infinite; }
    @keyframes float { 0%,100% { transform: translateY(0); } 50% { transform: translateY(-20px); } }

    @media (max-width: 576px) {
        .forgot-form-container { padding: 1.5rem; }
        .form-title { font-size: 1.5rem; }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        AOS.init({ duration: 1000, once: true });

        const form = document.querySelector('.forgot-form');
        const button = document.querySelector('.forgot-button');

        if (form && button) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                button.classList.add('loading');
                button.innerHTML = '<span class="button-text">Mengirim...</span><i class="fa-solid fa-spinner fa-spin"></i>';
                setTimeout(() => {
                    button.classList.remove('loading');
                    button.innerHTML = '<span class="button-text">Kirim Tautan Reset</span><i class="fa-solid fa-paper-plane"></i>';
                    // Tampilkan notifikasi sukses di sini jika diperlukan
                }, 1500);
            });
        }
    });
</script>

