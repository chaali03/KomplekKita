<script>
    document.addEventListener('DOMContentLoaded', function() {
        AOS.init({ duration: 1000, once: true });

        const form = document.querySelector('.forgot-form');
        const button = document.querySelector('.forgot-button');

        if (form && button) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                button.classList.add('loading');
                button.innerHTML = '<span class="button-text">Mengirim...</span><i class="fa-solid fa-spinner fa-spin"></i>';
                setTimeout(() => {
                    button.classList.remove('loading');
                    button.innerHTML = '<span class="button-text">Kirim Tautan Reset</span><i class="fa-solid fa-paper-plane"></i>';
                    // Tampilkan notifikasi sukses di sini jika diperlukan
                }, 1500);
            });
        }

        // Enhanced GSAP Animations - only run if GSAP is available
        if (typeof gsap !== 'undefined') {
            const timeline = gsap.timeline();
            
            timeline.from('.back-home-btn', {
                y: -20,
                opacity: 0,
                duration: 0.8,
                ease: 'power3.out'
            });
            
            timeline.from('.forgot-title', {
                y: 30,
                opacity: 0,
                duration: 1,
                ease: 'power3.out'
            }, "-=0.4");
            
            timeline.from('.forgot-subtitle', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                ease: 'power3.out'
            }, "-=0.6");

            timeline.from('.feature-item', {
                x: -50,
                opacity: 0,
                duration: 0.8,
                stagger: 0.2,
                ease: 'power3.out',
            }, "-=0.4");
            
            timeline.from('.forgot-form-container', {
                y: 50,
                opacity: 0,
                duration: 1,
                ease: 'power3.out',
            }, "-=0.8");
            
            timeline.from('.forgot-header', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                ease: 'power3.out',
            }, "-=0.6");

            timeline.from('.form-group', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                stagger: 0.15,
                ease: 'power3.out',
            }, "-=0.4");
            
            timeline.from('.forgot-button', {
                scale: 0.9,
                opacity: 0,
                duration: 0.8,
                ease: 'back.out(1.7)',
            }, "-=0.3");
            
            timeline.from('.back-to-login', {
                y: 15,
                opacity: 0,
                duration: 0.6,
                ease: 'power3.out',
            }, "-=0.4");
        } else {
            // Fallback simple animations if GSAP is not available
            const elements = [
                '.back-home-btn', '.forgot-title', '.forgot-subtitle',
                '.feature-item', '.forgot-form-container', '.forgot-header', 
                '.form-group', '.forgot-button', '.back-to-login'
            ];
            
            elements.forEach(selector => {
                const items = document.querySelectorAll(selector);
                items.forEach(item => {
                    (item as HTMLElement).style.opacity = '0';
                    setTimeout(() => {
                        (item as HTMLElement).style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                        (item as HTMLElement).style.opacity = '1';
                    }, 100);
                });
            });
        }
    });
</script>

