<header class="main-header">
  <div class="header-content">
    <div class="login-button-container">
      <div class="login-button">
        <i class="fa-solid fa-user-shield" aria-hidden="true"></i>
        <span>Admin</span>
        <span class="plan-pill">Free</span>
      </div>
    </div>

    <button class="burgir" aria-label="Toggle nav">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </button>

    <ul class="links">
      <li><a href="/admin">Dashboard</a></li>
      <li><a href="/adminprogram">Program</a></li>
      <li><a href="/admininfo">Informasi</a></li>
    </ul>
  </div>
</header>

<style>
  .parent-nav a {
    text-decoration: none;
    color: #000;
    font-weight: 500;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .parent-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 5rem;
  }

  .burgir {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 10;
  }

  .burgir .line {
    width: 2rem;
    height: 0.25rem;
    background: #333;
    border-radius: 10px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
  }

  .links {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-right: 32px;
  }

  .links a{
    text-decoration: none;
    color: #085895;
    font-weight: 500;
  }

  .links a:hover{ color: #2563eb; }


  @media (max-width: 768px) {
    .parent-nav {
      flex-direction: column;
      align-items: flex-end;
    }

    .burgir {
      display: flex;
      position: fixed;
      top: 5rem;
      left: 1rem;
      z-index: 9999;
    }
    .links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: rgba(255, 255, 255, .95);
      z-index: 5;
      padding-top: 5rem;
    }

    .links.is-active {
      display: flex;
      align-items: center;
      gap: 2rem;
    }
  }

  .main-header {
    position: sticky; top: 0; z-index: 50;
    padding: 10px 16px;
    backdrop-filter: saturate(180%) blur(8px);
    background: rgba(255,255,255,.8);
    border-bottom: 1px solid rgba(0,0,0,.06);
    transition: box-shadow .2s ease;
  }

  .header-content { display: grid; grid-template-columns: auto 1fr auto; align-items: center; gap: 12px; max-width: 1200px; margin: 0 auto; }

  .exit {
    cursor: pointer;
    border: none;
    background-color: transparent;
  }

  .exit :hover .icon {
    fill: #085895;
  }

  .ul-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 1rem;
  }

  .li-nav a {
    text-decoration: none;
    color: #085895;
    font-weight: 500;
  }

  .login-button { display: inline-flex; align-items: center; gap: 10px; padding: 10px 14px; border-radius: 12px; background: #fff; border: 1px solid #e5e7eb; box-shadow: 0 4px 14px rgba(0,0,0,.06); }
  .plan-pill { padding: 4px 8px; border-radius: 999px; background: rgba(34,211,238,.15); color: #22d3ee; font-weight: 700; font-size: .8rem; border: 1px solid rgba(34,211,238,.35); }
  /* removed premium/upgrade buttons per request */

  /* Locked/premium blur utility */
  .locked { position: relative; filter: blur(2px); pointer-events: none; user-select: none; }
  .locked::after { content: "Upgrade to Unlock"; position: absolute; inset: 0; display: grid; place-items: center; color: #fff; font-weight: 700; letter-spacing: .3px; background: rgba(2,6,23,.45); border-radius: 12px; }
  /* here is the navigation */
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burgerMenu = document.querySelector(".burgir");
    const navLinks = document.querySelector(".links");
    const body = document.body;
    const header = document.querySelector('.main-header');

    if (burgerMenu && navLinks) {
      burgerMenu.addEventListener("click", () => {
        navLinks.classList.toggle("is-active");
        burgerMenu.classList.toggle("is-active");
        body.classList.toggle("no-scroll");
      });
    }

    // Shadow on scroll
    window.addEventListener('scroll', () => {
      if (!header) return;
      if (window.scrollY > 4) {
        header.style.boxShadow = '0 6px 18px rgba(2,6,23,.06)';
      } else {
        header.style.boxShadow = 'none';
      }
    });
  });
</script>
