        </span>
      </div>
    </div>
  </div>
</div>

<script>
  // @ts-nocheck
  // Initialize sidebar functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Sidebar toggle
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const adminSidebar = document.querySelector('.admin-sidebar');
    const adminFrame = document.querySelector('.admin-frame');
    
    if (sidebarToggle && adminSidebar && adminFrame) {
      // Ensure sidebar is expanded by default
      adminSidebar.classList.remove('collapsed');
      adminFrame.classList.add('expanded');
      
      // Set initial icon state
      const icon = sidebarToggle.querySelector('i');
      if (icon) {
        icon.classList.remove('fa-chevron-right');
        icon.classList.add('fa-chevron-left');
      }
      
      // Toggle handler
      sidebarToggle.addEventListener('click', () => {
        adminSidebar.classList.toggle('collapsed');
        adminFrame.classList.toggle('expanded');
        
        // Change icon based on state
        const icon = sidebarToggle.querySelector('i');
        if (icon) {
          if (adminSidebar.classList.contains('collapsed')) {
            icon.classList.remove('fa-chevron-left');
            icon.classList.add('fa-chevron-right');
          } else {
            icon.classList.remove('fa-chevron-right');
            icon.classList.add('fa-chevron-left');
          }
        }
      });
    }
    
    // Section toggles
    const sectionToggles = document.querySelectorAll('.section-toggle');

    // Initialize all sections to be expanded by default
    sectionToggles.forEach((btn) => {
      const targetId = btn.getAttribute('aria-controls');
      const targetList = targetId ? document.getElementById(targetId) : null;
      const icon = btn.querySelector('.toggle-icon');
      
      // Force all sections to be expanded by default
      btn.setAttribute('aria-expanded', 'true');
      
      if (targetList) {
        targetList.style.overflow = 'hidden';
        targetList.style.maxHeight = targetList.scrollHeight + 'px';
        targetList.classList.remove('collapsed');
        
        // Set all icons to up (expanded) state
        if (icon) {
          icon.classList.remove('fa-chevron-down');
          icon.classList.add('fa-chevron-up');
        }
      }
    });

    sectionToggles.forEach((toggle) => {
      if (toggle.getAttribute('data-bound')) return;
      toggle.setAttribute('data-bound', '1');
      toggle.addEventListener('click', (e) => {
        const btn = e.currentTarget;
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!expanded));

        const targetId = btn.getAttribute('aria-controls');
        const targetList = targetId ? document.getElementById(targetId) : null;

        if (targetList) {
          targetList.style.overflow = 'hidden';
          if (expanded) {
            targetList.style.maxHeight = '0';
            targetList.classList.add('collapsed');
          } else {
            targetList.style.maxHeight = targetList.scrollHeight + 'px';
            targetList.classList.remove('collapsed');
          }
        }

        // Update chevron icon to indicate state (down = collapsed, up = expanded)
        const icon = btn.querySelector('.toggle-icon');
        if (icon) {
          const isExpanding = !expanded;
          icon.classList.remove(isExpanding ? 'fa-chevron-down' : 'fa-chevron-up');
          icon.classList.add(isExpanding ? 'fa-chevron-up' : 'fa-chevron-down');
          icon.style.transform = '';
        }
      });
    });
    
    // Active link highlighting
    const currentPath = window.location.pathname;
    const sidebarLinks = document.querySelectorAll('.sidebar-link');
    
    sidebarLinks.forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
        
        // Expand parent section if collapsed
        const parentList = link.closest('.nav-list');
        if (parentList && parentList.classList.contains('collapsed')) {
          const sectionToggle = parentList.previousElementSibling;
          if (sectionToggle && sectionToggle.classList.contains('section-toggle')) {
            sectionToggle.dispatchEvent(new Event('click'));
          }
        }
      } else {
        link.classList.remove('active');
      }
    });

    // Notifications badge sync (shares store with topbar)
    const STORE_KEY = 'kk_notifications';
    const COUNT_KEY = 'kk_unread_count';
    const notifBadge = document.querySelector('[data-notif-badge]') as HTMLElement | null;
    function getUnread(){
      try { return parseInt(localStorage.getItem(COUNT_KEY) || '0', 10) || 0; } catch { return 0; }
    }
    function updateNotifBadge(){
      if (!notifBadge) return;
      const c = getUnread();
      if (c > 0){ notifBadge.style.display = ''; notifBadge.textContent = String(c); }
      else { notifBadge.style.display = 'none'; }
    }
    updateNotifBadge();
    window.addEventListener('storage', (e) => {
      if (e.key === STORE_KEY || e.key === COUNT_KEY) updateNotifBadge();
    });
    // Same-document immediate sync when notifications updated from another component
    window.addEventListener('kk-notifs-updated', () => updateNotifBadge());

  });
</script>

<style>
  /*
   * Admin Sidebar – Light, modern, scoped styling
   * All rules are scoped under .admin-sidebar to avoid global impact
   */
  .admin-sidebar {
    /* Local design tokens */
    --sidebar-bg: #ffffff;
    --sidebar-border: #e5e7eb; /* neutral-200 */
    --sidebar-muted: #6b7280;  /* gray-500 */
    --sidebar-text: #111827;   /* gray-900 */
    --sidebar-hover: #f9fafb;  /* gray-50 */
    --sidebar-active: #eef2ff; /* indigo-50 */
    --sidebar-shadow: 0 1px 2px rgba(0,0,0,0.04), 0 4px 12px rgba(0,0,0,0.06);
    --primary: #4f46e5;        /* indigo-600 */
    --primary-soft: rgba(79, 70, 229, .08);
    --success: #10b981;
    background: var(--sidebar-bg);
    color: var(--sidebar-text);
    border-right: 1px solid var(--sidebar-border);
    box-shadow: var(--sidebar-shadow);
    transition: width 240ms ease;
  }

  .admin-sidebar .sidebar-content {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding-bottom: 72px; /* space so sticky footer never covers content */
  }

  /* Header */
  .admin-sidebar .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 14px 12px 14px;
    border-bottom: 1px solid var(--sidebar-border);
    position: sticky;
    top: 0;
    z-index: 5;
    background: linear-gradient(to bottom, rgba(255,255,255,0.85), rgba(255,255,255,0.75));
    backdrop-filter: saturate(140%) blur(10px);
  }
  .admin-sidebar .logo {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: inherit;
  }
  /* Brand logo (match Header.astro style, scoped) */
  .admin-sidebar .logo {
    position: relative;
    gap: 12px;
  }
  .admin-sidebar .logo .brand-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: linear-gradient(135deg, #3B82F6, #1E40AF);
    color: #ffffff;
    font-size: 1.1rem;
    box-shadow: 0 2px 10px rgba(59,130,246,0.3);
    transition: all 0.3s ease;
  }
  .admin-sidebar .logo .brand-text {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1F2937, #3B82F6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 15px rgba(59,130,246,0.3);
    line-height: 1;
  }
  .admin-sidebar .logo .brand-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(59,130,246,0.3) 0%, transparent 70%);
    filter: blur(10px);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }
  .admin-sidebar .logo:hover .brand-icon {
    transform: rotate(-10deg) scale(1.06);
    background: linear-gradient(135deg, #3B82F6, #8B5CF6);
    box-shadow: 0 5px 15px rgba(59,130,246,0.5);
  }
  .admin-sidebar .logo:hover .brand-text {
    background: linear-gradient(135deg, #3B82F6, #8B5CF6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .admin-sidebar .logo:hover .brand-glow { opacity: 1; }
  .admin-sidebar .sidebar-actions .sidebar-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border-radius: 10px;
    border: 1px solid var(--sidebar-border);
    background: #fff;
    color: var(--sidebar-text);
    transition: background 160ms ease, border-color 160ms ease, transform 160ms ease;
  }
  .admin-sidebar .sidebar-actions .sidebar-toggle:hover {
    background: var(--sidebar-hover);
    border-color: #d1d5db;
    transform: translateY(-1px);
  }

  /* Demo strip */
  .admin-sidebar .demo-strip {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 8px 12px 12px;
    padding: 8px 10px;
    border-radius: 10px;
    background: #fffbeb;
    color: #92400e;
    border: 1px dashed #fbbf24;
    font-weight: 700;
  }
  .admin-sidebar .demo-strip i { opacity: .9; }

  .admin-sidebar .demo-badge {
    display: inline-flex;
    align-items: center;
    height: 22px;
    padding: 0 8px;
    margin-top: 6px;
    border-radius: 999px;
    background: #fff7ed;
    color: #b45309;
    border: 1px solid #fed7aa;
    box-shadow: inset 0 1px 0 rgba(255,255,255,.6);
    font-weight: 800;
    font-size: 12px;
    letter-spacing: .2px;
    justify-self: end;
  }

  /* Navigation */
  .admin-sidebar .sidebar-nav { padding: 8px 8px 12px; }
  .admin-sidebar .nav-section { position: relative; margin-bottom: 4px; }
  .admin-sidebar .nav-section + .nav-section { margin-top: 8px; }
  .admin-sidebar .nav-section + .nav-section::before {
    content: '';
    position: absolute;
    left: 12px;
    right: 12px;
    top: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #eef2ff 20%, #e5e7eb 50%, #eef2ff 80%, transparent);
    opacity: .9;
  }
  .admin-sidebar .nav-title {
    font-size: 12px;
    letter-spacing: .4px;
    text-transform: uppercase;
    color: var(--sidebar-muted);
    font-weight: 800;
    margin: 0;
  }
  .admin-sidebar .section-toggle {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    background: transparent;
    border: 0;
    padding: 12px 8px 8px 8px;
    cursor: pointer;
    border-radius: 10px;
    transition: all 220ms cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .admin-sidebar .section-toggle::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(79,70,229,0.08) 0%, rgba(79,70,229,0) 70%);
    transform: translate(-50%, -50%) scale(0);
    transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    border-radius: inherit;
  }
  .admin-sidebar .section-toggle:hover { 
    background: var(--sidebar-hover); 
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(79,70,229,0.08);
  }
  
  .admin-sidebar .section-toggle:hover::after {
    transform: translate(-50%, -50%) scale(1.5);
  }
  .admin-sidebar .section-toggle .toggle-icon { 
    color: var(--sidebar-muted); 
    transition: transform 300ms cubic-bezier(0.34, 1.56, 0.64, 1), color 220ms ease; 
  }

  .admin-sidebar .nav-list {
    list-style: none;
    padding: 4px;
    margin: 0 4px 8px;
    border-radius: 12px;
    transition: max-height 360ms cubic-bezier(0.4, 0, 0.2, 1), opacity 280ms cubic-bezier(0.4, 0, 0.2, 1), transform 280ms cubic-bezier(0.4, 0, 0.2, 1);
    will-change: max-height, opacity, transform;
    background: transparent;
    opacity: 1;
    transform-origin: top center;
  }
  .admin-sidebar .nav-list.collapsed { 
    opacity: 0.6; 
    transform: scaleY(0.95);
  }

  .admin-sidebar .nav-item { margin: 2px 0; }
  .admin-sidebar .sidebar-link {
    position: relative;
    display: grid;
    grid-template-columns: 32px 1fr auto;
    align-items: center;
    gap: 10px;
    padding: 10px 14px; /* extra right padding so badge isn't cramped */
    border-radius: 12px;
    color: inherit;
    text-decoration: none;
    transition: all 240ms cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
  }
  
  .admin-sidebar .sidebar-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, rgba(79,70,229,0) 0%, rgba(79,70,229,0.08) 50%, rgba(79,70,229,0) 100%);
    transform: translateX(-100%);
    transition: transform 650ms cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  .admin-sidebar .sidebar-link:hover {
    background: var(--sidebar-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(79,70,229,0.12);
  }
  
  .admin-sidebar .sidebar-link:hover::before {
    transform: translateX(100%);
  }
  .admin-sidebar .sidebar-link.active {
    background: rgba(79,70,229, .08);
    box-shadow: 0 4px 12px rgba(79,70,229,0.08);
    border: 1px solid rgba(99,102,241,.25);
    transform: translateY(-1px);
  }
  
  .admin-sidebar .sidebar-link.active::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: linear-gradient(to bottom, #4f46e5, #818cf8);
    border-radius: 0 4px 4px 0;
    box-shadow: 0 0 8px rgba(79,70,229,0.4);
  }
  /* Focus-visible accessibility */
  .admin-sidebar .sidebar-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59,130,246,.25), inset 0 0 0 1px rgba(59,130,246,.2);
    background: var(--sidebar-hover);
  }
  .admin-sidebar .link-icon {
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: linear-gradient(180deg, rgba(79,70,229,.08), rgba(79,70,229,.12));
    color: var(--primary);
    box-shadow: 0 1px 2px rgba(79,70,229,0.06) inset;
    transition: all 240ms cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    z-index: 1;
  }
  
  .admin-sidebar .link-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(180deg, rgba(79,70,229,.12), rgba(79,70,229,.18));
    opacity: 0;
    transition: opacity 240ms ease;
    z-index: -1;
  }
  .admin-sidebar .sidebar-link:hover .link-icon {
    background: linear-gradient(180deg, rgba(59,130,246,.12), rgba(79,70,229,.18));
    box-shadow: 0 4px 12px rgba(79,70,229,0.18);
    transform: translateY(-2px) scale(1.05);
  }
  
  .admin-sidebar .sidebar-link:hover .link-icon::before {
    opacity: 1;
  }
  
  .admin-sidebar .sidebar-link.active .link-icon {
    background: linear-gradient(180deg, rgba(79,70,229,.15), rgba(79,70,229,.25));
    box-shadow: 0 4px 12px rgba(79,70,229,0.15);
    transform: translateY(-1px);
  }
  .admin-sidebar .link-text { font-weight: 600; }

  /* Link right-side adornments */
  .admin-sidebar .link-badge.status.success {
    width: 8px; height: 8px; border-radius: 999px; background: var(--success);
    box-shadow: 0 0 0 3px rgba(16, 185, 129, .18);
    justify-self: end;
  }
  .admin-sidebar .link-badge.notif-count {
    min-width: 22px; height: 20px; padding: 0 8px; border-radius: 999px;
    background: linear-gradient(180deg, #ef4444, #dc2626);
    color: #fff; font-weight: 900; font-size: 12px; letter-spacing: .1px;
    display: inline-flex; align-items: center; justify-content: center;
    border: 1px solid #fecaca; /* red-200 */
    box-shadow: 0 4px 12px rgba(239,68,68,.35), inset 0 1px 0 rgba(255,255,255,.35);
    justify-self: end; margin-left: 6px;
  }
  .admin-sidebar .sidebar-link:hover .link-badge.notif-count {
    box-shadow: 0 6px 16px rgba(239,68,68,.45), inset 0 1px 0 rgba(255,255,255,.45);
    transform: translateY(-1px);
  }
  
  .admin-sidebar .premium-indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 22px;
    padding: 0 8px;
    border-radius: 999px;
    background: #fff7ed; /* orange-50 */
    color: #b45309;      /* orange-700 */
    border: 1px solid #fed7aa; /* orange-200 */
    font-weight: 700;
    font-size: 12px;
    justify-self: end;
  }
  .admin-sidebar .premium-indicator i {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Footer */
  .admin-sidebar .sidebar-footer {
    margin-top: auto;
    padding: 12px 16px;
    border-top: 1px solid var(--sidebar-border);
    background: linear-gradient(to top, rgba(249,250,251,.92), rgba(255,255,255,.78));
    position: sticky;
    bottom: 0;
    z-index: 4;
    backdrop-filter: saturate(140%) blur(8px);
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    display: grid;
    grid-template-columns: 1fr auto 1fr; /* center user-info; actions on the right */
    align-items: center;
    gap: 8px;
  }
  .admin-sidebar .user-info { display: flex; align-items: center; gap: 10px; margin-left: 0; justify-self: center; }
  .admin-sidebar .user-avatar { position: relative; width: 42px; height: 42px; overflow: visible; }
  .admin-sidebar .user-avatar img {
    width: 42px; height: 42px; border-radius: 12px; object-fit: cover;
    box-shadow: 0 2px 6px rgba(0,0,0,.06);
