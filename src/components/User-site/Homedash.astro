<script type="module">
  const currency = (n) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', maximumFractionDigits: 0 }).format(Number(n||0));
  const qs = new URLSearchParams(location.search);
  // Gunakan default komplek_id 2 jika 1 tidak valid
  const komplekId = parseInt(qs.get('komplek_id') || localStorage.getItem('komplek_id') || '2');
  localStorage.setItem('komplek_id', String(komplekId));

  async function fetchJson(url){
    const res = await fetch(url, {
      headers: { 'Accept': 'application/json' }
    });
    if(!res.ok){
      const text = await res.text().catch(()=> '');
      throw new Error(`Gagal fetch: ${url} [${res.status}] ${text?.slice(0,200)}`);
    }
    return res.json();
  }

  function renderKeuanganSummary(data){
    const el = document.getElementById('kas-akhir');
    if (el) el.textContent = currency(data?.total ?? 0);
  }

  function renderProgram(list){
    const ul = document.getElementById('program-list');
    if (!ul) return;
    ul.innerHTML = '';
    (list||[]).slice(0,5).forEach(item => {
      const li = document.createElement('li');
      li.className = 'event-item';
      const name = document.createElement('span');
      name.className = 'event-name';
      name.textContent = item.judul || 'Tanpa Judul';
      const date = document.createElement('span');
      date.className = 'event-date';
      date.textContent = (item.tanggal_mulai || '').substring(0,10);
      li.appendChild(name);
      li.appendChild(date);
      ul.appendChild(li);
    });
  }

  function renderInformasi(list){
    const wrap = document.getElementById('info-list');
    if (!wrap) return;
    wrap.innerHTML = '';
    (list||[]).slice(0,6).forEach(item => {
      const card = document.createElement('div');
      card.className = 'info-card';
      const content = document.createElement('div');
      content.className = 'card-content';
      const footer = document.createElement('div');
      footer.className = 'card-footer';
      const p = document.createElement('p');
      p.innerHTML = `${(item.judul||'Informasi').slice(0,40)}<br/><span>Selengkapnya</span>`;
      const arrow = document.createElement('span');
      arrow.className = 'card-arrow';
      arrow.textContent = '>';
      footer.appendChild(p);
      footer.appendChild(arrow);
      card.appendChild(content);
      card.appendChild(footer);
      wrap.appendChild(card);
    });
  }

  async function loadAll(){
    try{
      const base = '/api/public';
      const param = `?komplek_id=${encodeURIComponent(komplekId)}`;
      const [keu, info, prog] = await Promise.all([
        fetchJson(`/api/public/transaksi/summary${param}`).catch(err => {
          console.error('Error fetching transaksi summary:', err);
          return { total: 0 };
        }),
        fetchJson(`/api/public/informasi${param}`).catch(err => {
          console.error('Error fetching informasi:', err);
          return [];
        }),
        fetchJson(`/api/public/program${param}`).catch(err => {
          console.error('Error fetching program:', err);
          return [];
        }),
      ]);
      renderKeuanganSummary(keu);
      renderInformasi(info?.data || info); // handle pagination or raw list
      renderProgram(prog?.data || prog);
    } catch(err){
      console.error('Error in loadAll function:', err);
    }
  }

  loadAll();

  // Iuran notice logic
  (function(){
    try {
      const now = new Date();
      const ym = `${now.getFullYear()}-${String(now.getMonth()+1).padStart(2,'0')}`;
      const raw = localStorage.getItem('dues_configs');
      let saved = false;
      if (raw) {
        try {
          const cfg = JSON.parse(raw);
          const val = cfg?.[ym];
          saved = !!(typeof val === 'number' ? val > 0 : val && typeof val.amount !== 'undefined' ? Number(val.amount) > 0 : false);
        } catch {
          // if not JSON object, ignore
        }
      }
      const wrap = document.getElementById('dues-notice');
      if (wrap) wrap.style.display = saved ? 'none' : 'flex';
      const txt = document.getElementById('dues-notice-text');
      if (txt) txt.innerHTML = `Iuran bulan <strong>${ym}</strong> belum disimpan admin. Belum ada penagihan berjalan.`;
      window.addEventListener('storage', (e) => {
        if (e.key === 'dues_configs') {
          location.reload();
        }
      });
    } catch (err) {
      console.warn('Failed to compute dues notice:', err);
    }
  })();
</script>

