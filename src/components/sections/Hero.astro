<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Set random particle movement directions
        const particles = document.querySelectorAll('.particle');
        particles.forEach(particle => {
            const tx = (Math.random() * 200 - 100) + 'px';
            const ty = (Math.random() * 200 - 100) + 'px';
            particle.style.setProperty('--tx', tx);
            particle.style.setProperty('--ty', ty);
        });

        // Ripple effect for buttons
        const buttons = document.querySelectorAll('.btn');
        buttons.forEach(button => {
            button.addEventListener('click', function(e) {
                const rect = button.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const ripple = document.createElement('span');
                ripple.classList.add('ripple');
                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Hover effects for buttons
        buttons.forEach(button => {
            button.addEventListener('mouseenter', () => {
                const icon = button.querySelector('.btn-icon');
                if (icon) {
                    if (button.classList.contains('btn-primary')) {
                        icon.style.transform = 'translateX(3px)';
                    } else {
                        icon.style.transform = 'rotate(10deg) scale(1.2)';
                    }
                }
            });
            
            button.addEventListener('mouseleave', () => {
                const icon = button.querySelector('.btn-icon');
                if (icon) {
                    icon.style.transform = '';
                }
            });
        });

        // Parallax effect on scroll
        window.addEventListener('scroll', () => {
            const scrollY = window.scrollY;
            const heroImage = document.querySelector('.hero-image');
            const shapes = document.querySelector('.shapes');
            const waves = document.querySelector('.waves-container');
            
            if (heroImage && shapes && waves) {
                heroImage.style.transform = `translateY(${scrollY * 0.1}px)`;
                shapes.style.transform = `translateY(${scrollY * 0.05}px)`;
                waves.style.transform = `translateY(${scrollY * 0.02}px)`;
            }
        });
    });
</script>
