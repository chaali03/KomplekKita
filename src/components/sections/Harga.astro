                    }
                    updatePrices(periode);
                });

                // Keyboard support
                btn.addEventListener('keydown', (e: KeyboardEvent) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        (btn as HTMLButtonElement).click();
                    }
                    if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
                        e.preventDefault();
                        const buttons = Array.from(tabBtns) as HTMLButtonElement[];
                        const idx = buttons.indexOf(btn as HTMLButtonElement);
                        const nextIdx = e.key === 'ArrowRight' ? (idx + 1) % buttons.length : (idx - 1 + buttons.length) % buttons.length;
                        buttons[nextIdx].focus();
                        buttons[nextIdx].click();
                    }
                });
            });

            // Ensure initial state reflects active tab
            const initial = (Array.from(tabBtns) as HTMLButtonElement[]).find((b) => b.classList.contains('active')) || tabBtns[0];
            if (initial) {
                (initial as HTMLButtonElement).click();
            }

            // Function to update prices based on selected period
            function updatePrices(periode: 'bulanan' | 'tahunan') {
                if (premiumPrice) {
                    /** @type {HTMLSpanElement|null} */
                    const priceElement = premiumPrice.querySelector<HTMLSpanElement>('.price');
                    /** @type {HTMLSpanElement|null} */
                    const periodElement = premiumPrice.querySelector<HTMLSpanElement>('.period');
                    if (priceElement) priceElement.textContent = hargaPaket[periode].premium;
                    if (periodElement) periodElement.textContent = periode === 'bulanan' ? '/bulan' : '/tahun';
                }
                if (plusPrice) {
                    /** @type {HTMLSpanElement|null} */
                    const priceElement = plusPrice.querySelector<HTMLSpanElement>('.price');
                    /** @type {HTMLSpanElement|null} */
                    const periodElement = plusPrice.querySelector<HTMLSpanElement>('.period');
                    if (priceElement) priceElement.textContent = hargaPaket[periode].plus;
                    if (periodElement) periodElement.textContent = periode === 'bulanan' ? '/bulan' : '/tahun';
                }
            }

            // FAQ accordion functionality
            const faqItems = document.querySelectorAll<HTMLElement>('.faq-item');
            faqItems.forEach((item) => {
                const question = item.querySelector<HTMLElement>('.faq-question');
                if (!question) return;
                question.addEventListener('click', function() {
                    item.classList.toggle('active');
                    faqItems.forEach((otherItem) => {
                        if (otherItem !== item) (otherItem as HTMLElement).classList.remove('active');
                    });
                });
            });
        });
    </script>
