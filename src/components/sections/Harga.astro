                    currentBtn.classList.add('active');
                    currentBtn.setAttribute('aria-pressed', 'true');

                    const periode /** @type {'bulanan'|'tahunan'} */ = (currentBtn as HTMLElement & { dataset: { tab?: string }}).dataset.tab === 'tahunan' ? 'tahunan' : 'bulanan';

                    // Move slider
                    if (tabSlider) {
                        (tabSlider as HTMLElement).style.transform = periode === 'bulanan' ? 'translateX(0)' : 'translateX(100%)';
                    }
                    updatePrices(periode);
                });

                // Keyboard support
                btn.addEventListener('keydown', (e) => {
                    const ke = e as KeyboardEvent;
                    if (ke.key === 'Enter' || ke.key === ' ') {
                        e.preventDefault();
                        (btn as HTMLElement).click();
                    }
                    if (ke.key === 'ArrowRight' || ke.key === 'ArrowLeft') {
                        e.preventDefault();
                        const buttons = Array.from(tabBtns) as HTMLElement[];
                        const idx = buttons.indexOf(btn as HTMLElement);
                        const nextIdx = ke.key === 'ArrowRight' ? (idx + 1) % buttons.length : (idx - 1 + buttons.length) % buttons.length;
                        buttons[nextIdx].focus();
                        buttons[nextIdx].click();
                    }
                });
            });

            // Ensure initial state reflects active tab
            const initial = (Array.from(tabBtns) as HTMLElement[]).find((b) => b.classList.contains('active')) || (tabBtns[0] as HTMLElement);
            if (initial) {
                initial.click();
            }

            // Function to update prices based on selected period
            /**
             * @param {'bulanan'|'tahunan'} periode
             */
            // @ts-ignore - parameter type is provided via JSDoc above for JS context
            function updatePrices(periode /** @type {'bulanan'|'tahunan'} */) {
                if (premiumPrice) {
                    const priceElement = premiumPrice.querySelector('.price') as HTMLElement | null;
                    const periodElement = premiumPrice.querySelector('.period') as HTMLElement | null;
                    if (priceElement) priceElement.textContent = hargaPaket[/** @type {'bulanan'|'tahunan'} */(periode)].premium;
                    if (periodElement) periodElement.textContent = periode === 'bulanan' ? '/bulan' : '/tahun';
                }
                
                if (plusPrice) {
                    const priceElement = plusPrice.querySelector('.price') as HTMLElement | null;
                    const periodElement = plusPrice.querySelector('.period') as HTMLElement | null;
                    
                    if (priceElement) priceElement.textContent = hargaPaket[/** @type {'bulanan'|'tahunan'} */(periode)].plus;
                    if (periodElement) periodElement.textContent = periode === 'bulanan' ? '/bulan' : '/tahun';
                    if (plusOriginalPrice) (plusOriginalPrice as HTMLElement).textContent = hargaPaket[/** @type {'bulanan'|'tahunan'} */(periode)].plusOriginal;
                    if (plusDiscountText) (plusDiscountText as HTMLElement).textContent = hargaPaket[/** @type {'bulanan'|'tahunan'} */(periode)].plusDiscount;
                }
            }

            // FAQ accordion functionality
            const faqItems = document.querySelectorAll('.faq-item');
            faqItems.forEach((item) => {
                const question = item.querySelector('.faq-question');
                if (!question) return;
                question.addEventListener('click', function() {
                    item.classList.toggle('active');
                    faqItems.forEach((otherItem) => {
                        if (otherItem !== item) otherItem.classList.remove('active');
                    });
                });
            });
        });
    </script>
