<section id="harga" class="section harga-section">
    <!-- Animated background elements -->
    <div class="harga-bg-elements">
        <div class="bg-element bg-element-1"></div>
        <div class="bg-element bg-element-2"></div>
        <div class="bg-element bg-element-3"></div>
        <div class="bg-element bg-element-4"></div>
    </div>

    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Pilihan Paket</h2>
        <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
            Solusi manajemen komplek perumahan yang sesuai dengan kebutuhan Anda
        </p>

        <div class="harga-tabs" data-aos="fade-up" data-aos-delay="200">
            <button class="tab-btn active" data-tab="bulanan">Bulanan</button>
            <button class="tab-btn" data-tab="tahunan">Tahunan</button>
            <div class="tab-slider"></div>
        </div>

        <div class="harga-container">
            <!-- Paket Gratis -->
            <div class="harga-card" data-aos="fade-up" data-aos-delay="300">
                <div class="harga-card-header">
                    <h3>Gratis</h3>
                    <div class="harga-price" id="gratis-price">
                        <span class="price">Rp 0</span>
                        <span class="period">/bulan</span>
                    </div>
                </div>
                <div class="harga-card-body">
                    <ul class="harga-features">
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Daftar pemasukan & pengeluaran bulanan</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Request surat pindah/izin melalui sistem</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Update data kepemilikan rumah & anggota keluarga</span>
                        </li>
                        <li class="feature-item disabled">
                            <span class="feature-icon"><i class="fas fa-times"></i></span>
                            <span class="feature-text">Laporan keuangan otomatis + grafik interaktif</span>
                        </li>
                        <li class="feature-item disabled">
                            <span class="feature-icon"><i class="fas fa-times"></i></span>
                            <span class="feature-text">Tracking status surat</span>
                        </li>
                    </ul>
                </div>
                <div class="harga-card-footer">
                    <a href="#" class="btn-harga btn-outline">Mulai Gratis</a>
                </div>
                <div class="card-decoration"></div>
                <div class="card-glow"></div>
            </div>

            <!-- Paket Premium -->
            <div class="harga-card featured" data-aos="fade-up" data-aos-delay="400">
                <div class="harga-card-badge">Terpopuler</div>
                <div class="harga-card-header">
                    <h3>Premium</h3>
                    <div class="harga-price" id="premium-price">
                        <span class="price">Rp 99.000</span>
                        <span class="period">/bulan</span>
                    </div>
                </div>
                <div class="harga-card-body">
                    <ul class="harga-features">
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Semua fitur Gratis</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Laporan keuangan otomatis + grafik interaktif</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Download laporan keuangan (PDF/Excel)</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Reminder pembayaran iuran via notifikasi</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Tracking status surat</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Tandatangan digital pengurus</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Verifikasi otomatis dengan dokumen (KTP/KK)</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-check"></i></span>
                            <span class="feature-text">Laporan demografi warga</span>
                        </li>
                    </ul>
                </div>
                <div class="harga-card-footer">
                    <a href="#" class="btn-harga btn-primary">Pilih Premium</a>
                </div>
                <div class="card-decoration"></div>
                <div class="card-glow"></div>
            </div>

            <!-- Paket Enterprise -->
            <div class="harga-card" data-aos="fade-up" data-aos-delay="500">
                <div class="harga-card-header">
                    <h3>Enterprise</h3>
                    <div class="harga-price">
                        <span class="price">Rp 119.000</span>
                        <span class="period">/bulan</span>
                    </div>
                </div>
                <div class="harga-card-body">
                    <ul class="harga-features">
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-plus"></i></span>
                            <span class="feature-text">Semua fitur Premium</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-plus"></i></span>
                            <span class="feature-text">Analitik keuangan lanjutan</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-plus"></i></span>
                            <span class="feature-text">Integrasi dengan WhatsApp/email</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-plus"></i></span>
                            <span class="feature-text">Dashboard pengurus untuk analisa data warga</span>
                        </li>
                        <li class="feature-item">
                            <span class="feature-icon"><i class="fas fa-plus"></i></span>
                            <span class="feature-text">Dukungan prioritas 24/7</span>
                        </li>
                    </ul>
                </div>
                <div class="harga-card-footer">
                    <a href="#" class="btn-harga btn-outline">Pilih Enterprise</a>
                </div>
                <div class="card-decoration"></div>
                <div class="card-glow"></div>
            </div>
        </div>

        <div class="harga-comparison" data-aos="fade-up" data-aos-delay="600">
            <h3 class="comparison-title">Perbandingan Fitur</h3>
            
            <div class="comparison-table-wrapper">
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Fitur</th>
                            <th>Gratis</th>
                            <th>Premium</th>
                            <th>Enterprise</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Transparansi Keuangan -->
                        <tr class="category-row">
                            <td colspan="4">Transparansi Keuangan</td>
                        </tr>
