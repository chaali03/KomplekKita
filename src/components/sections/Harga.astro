<script>
    // Tab switching functionality
    document.addEventListener('DOMContentLoaded', function() {
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabSlider = document.querySelector('.tab-slider');
        const premiumPrice = document.getElementById('premium-price');
        
        tabBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all buttons
                tabBtns.forEach(b => b.classList.remove('active'));
                
                // Add active class to clicked button
                this.classList.add('active');
                
                // Move slider
                if (this.dataset.tab === 'bulanan') {
                    tabSlider.style.transform = 'translateX(0)';
                    if (premiumPrice) {
                        premiumPrice.innerHTML = '<span class="price">Rp 99.000</span><span class="period">/bulan</span>';
                    }
                } else {
                    tabSlider.style.transform = 'translateX(100%)';
                    if (premiumPrice) {
                        premiumPrice.innerHTML = '<span class="price">Rp 948.000</span><span class="period">/tahun</span>';
                    }
                }
            });
        });
        
        // FAQ accordion functionality
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            
            question.addEventListener('click', function() {
                // Toggle active class on clicked item
                item.classList.toggle('active');
                
                // Close other items
                faqItems.forEach(otherItem => {
                    if (otherItem !== item) {
                        otherItem.classList.remove('active');
                    }
                });
            });
        });
    });
</script>