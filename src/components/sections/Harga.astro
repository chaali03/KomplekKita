                        <tr class="category-row">
                            <td colspan="4">Validasi Data Warga</td>
                        </tr>
                        <tr>
                            <td>Update data kepemilikan rumah & anggota keluarga</td>
                            <td><i class="fas fa-check"></i></td>
                            <td><i class="fas fa-check"></i></td>
                            <td><i class="fas fa-check"></i></td>
                        </tr>
                        <tr>
                            <td>Verifikasi otomatis dengan dokumen (KTP/KK)</td>
                            <td><i class="fas fa-times"></i></td>
                            <td><i class="fas fa-check"></i></td>
                            <td><i class="fas fa-check"></i></td>
                        </tr>
                        <tr>
                            <td>Riwayat perubahan data</td>
                            <td><i class="fas fa-times"></i></td>
                            <td><i class="fas fa-check"></i></td>
                            <td><i class="fas fa-check"></i></td>
                        </tr>
                        <tr>
                            <td>Laporan demografi warga</td>
