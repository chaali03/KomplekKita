        transition: all var(--transition-fast);
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
    }
    
    .textarea-container .input-icon {
        top: 1rem;
    }
    
    /* Input focus effect */
    .input-focus-effect {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--primary-blue), var(--muted-green));
        transition: width 0.3s ease;
    }
    
    .input-container.focused .input-focus-effect {
        width: 100%;
    }
    
    /* Submit button with particles */
    .btn-primary {
        position: relative;
        overflow: hidden;
    }
    
    .btn-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }
    
    .btn-particles .particle {
        position: absolute;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        pointer-events: none;
        animation: particle-float 1.5s ease-in-out infinite alternate;
        opacity: 0;
    }
    
    .btn-text, .btn-icon {
        position: relative;
        z-index: 1;
    }
    
    /* Form status styles */
    .form-status {
        margin-top: 1.5rem;
        padding: 1rem;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        gap: 0.8rem;
        opacity: 0;
        height: 0;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .form-status.visible {
        opacity: 1;
        height: auto;
    }
    
