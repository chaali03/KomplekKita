                            <div class="kontak-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <h3>Email</h3>
                            <p>info@komplekita.id</p>
                            <div class="card-decoration"></div>
                            <div class="card-glow"></div>
                        </div>
                    </div>
                </div>

                <div class="kontak-card-wrapper">
