<style>
	/* Testimonial Section */
	.testimonial-section {
		position: relative;
		overflow: hidden;
		background: var(--white);
		padding: 6rem 0;
	}

	.testimonials-wrapper {
		position: relative;
		z-index: 2;
	}

	.testimonial-background-shapes {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		overflow: hidden;
	}

	.testimonial-background-shapes .shape {
		position: absolute;
		border-radius: 50%;
		filter: blur(40px);
		opacity: 0.5;
	}

	.testimonial-background-shapes .shape-1 {
		width: 300px;
		height: 300px;
		background: var(--primary-blue);
		opacity: 0.4;
		top: -100px;
		right: -50px;
		animation: float-slow 15s ease-in-out infinite alternate;
	}

	.testimonial-background-shapes .shape-2 {
		width: 200px;
		height: 200px;
		background: var(--muted-green);
		opacity: 0.4;
		bottom: -50px;
		left: 10%;
		animation: float-slow 12s ease-in-out infinite alternate-reverse;
	}

	.testimonial-background-shapes .shape-3 {
		width: 150px;
		height: 150px;
		background: var(--muted-orange);
		opacity: 0.4;
		top: 30%;
		left: -50px;
		animation: float-slow 18s ease-in-out infinite alternate;
	}

	.testimonial-background-shapes .shape-4 {
		width: 100px;
		height: 100px;
		background: var(--primary-blue-dark);
		opacity: 0.4;
		bottom: 20%;
		right: 10%;
		animation: float-slow 10s ease-in-out infinite alternate-reverse;
	}

	@keyframes float-slow {
		0% { transform: translate(0, 0) rotate(0deg); }
		50% { transform: translate(20px, 20px) rotate(5deg); }
		100% { transform: translate(-20px, -20px) rotate(-5deg); }
	}

	.testimonials-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2.5rem;
		position: relative;
		z-index: 1;
		margin-bottom: 3rem;
	}

	.testimonial-card {
	background: rgba(255, 255, 255, 0.85);
	border-radius: 25px;
	padding: 2.5rem;
	text-align: center;
	border: 2px solid var(--primary-blue);
	box-shadow: 0 20px 60px rgba(70, 130, 180, 0.2);
	transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
	position: relative;
	overflow: hidden;
	backdrop-filter: blur(10px);
	-webkit-backdrop-filter: blur(10px);
	transform-style: preserve-3d;
	perspective: 1000px;
}

	.testimonial-card::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 5px;
	background: linear-gradient(90deg, var(--muted-orange), var(--primary-blue), var(--muted-green));
	transform: scaleX(0);
	transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
	z-index: 1;
	box-shadow: 0 0 20px rgba(244, 166, 96, 0.5);
}

	.testimonial-card:hover::before {
	transform: scaleX(1);
	animation: border-glow 2s infinite alternate;
}

@keyframes border-glow {
	0% {
		box-shadow: 0 0 10px rgba(244, 166, 96, 0.3);
	}
	100% {
		box-shadow: 0 0 20px rgba(244, 166, 96, 0.7);
	}
}

	.testimonial-card:hover {
	transform: translateY(-15px) scale(1.02) rotateY(5deg);
	box-shadow: 0 30px 80px rgba(70, 130, 180, 0.3), 0 0 30px rgba(135, 206, 235, 0.5);
	background: rgba(255, 255, 255, 0.95);
	border-color: var(--primary-blue-dark);
	transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

	.testimonial-header {
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		gap: 1rem;
	}

	.testimonial-avatar {
	width: 80px;
	height: 80px;
	border-radius: 50%;
	overflow: hidden;
	border: 4px solid var(--primary-blue);
	box-shadow: 0 10px 30px rgba(70, 130, 180, 0.4);
	transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
	position: relative;
	z-index: 2;
}

	.testimonial-avatar::before {
		content: '';
		position: absolute;
		top: -5px;
		left: -5px;
		right: -5px;
		bottom: -5px;
		border-radius: 50%;
		background: conic-gradient(var(--primary-blue), var(--muted-green), var(--muted-orange), var(--primary-blue-dark), var(--primary-blue));
		z-index: -1;
		opacity: 0;
		transform: scale(0.8);
		transition: all 0.3s ease;
		animation: rotate 4s linear infinite;
	}

	.testimonial-avatar:hover {
		transform: scale(1.1) rotate(5deg);
		border-color: var(--primary-blue-dark);
		box-shadow: 0 15px 35px rgba(70, 130, 180, 0.6);
	}

	.testimonial-avatar:hover::before {
		opacity: 1;
		transform: scale(1.1);
	}

	.testimonial-avatar img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.testimonial-info {
		text-align: left;
	}

	.testimonial-info h4 {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: 0.25rem;
	}

	.testimonial-role {
		font-size: 0.875rem;
		color: var(--text-light);
		font-weight: 500;
		display: block;
		margin-bottom: 0.5rem;
	}

	.testimonial-rating {
	display: flex;
	gap: 0.25rem;
	transition: all 0.3s ease;
}

.testimonial-rating i {
	color: #FFD700;
	font-size: 0.875rem;
	animation: star-twinkle 2s ease-in-out infinite;
}

.testimonial-card:hover .testimonial-rating {
	transform: scale(1.05);
	filter: drop-shadow(0 0 5px rgba(255, 215, 0, 0.5));
}

	.testimonial-rating i:nth-child(2) { animation-delay: 0.2s; }
	.testimonial-rating i:nth-child(3) { animation-delay: 0.4s; }
	.testimonial-rating i:nth-child(4) { animation-delay: 0.6s; }
	.testimonial-rating i:nth-child(5) { animation-delay: 0.8s; }

	@keyframes star-twinkle {
		0% { opacity: 1; transform: scale(1) rotate(0deg); }
		50% { opacity: 0.7; transform: scale(1.2) rotate(5deg); }
		100% { opacity: 1; transform: scale(1) rotate(0deg); }
	}

	.testimonial-content {
	margin-bottom: 2rem;
	transition: all 0.3s ease;
	position: relative;
}

.testimonial-content p {
	font-size: 1.1rem;
	line-height: 1.7;
	color: var(--text-light);
	font-style: italic;
	transition: all 0.3s ease;
}

.testimonial-card:hover .testimonial-content p {
	color: var(--text-dark);
}

.testimonial-content::before {
	content: '"';
	position: absolute;
	top: -20px;
	left: 0;
	font-size: 4rem;
	line-height: 1;
	color: rgba(59, 130, 246, 0.1);
	font-family: serif;
	transition: all 0.3s ease;
}

.testimonial-card:hover .testimonial-content::before {
	color: rgba(59, 130, 246, 0.2);
	transform: scale(1.2) translateY(-5px);
}

	.testimonial-content strong {
		color: var(--text-dark);
		font-weight: 600;
	}

	.testimonial-metrics {
	display: flex;
	justify-content: center;
	gap: 1.5rem;
	flex-wrap: wrap;
	transition: all 0.4s ease;
}

.testimonial-card:hover .testimonial-metrics {
	border-top-color: rgba(59, 130, 246, 0.3);
	background: rgba(59, 130, 246, 0.05);
	margin: 2rem -2.5rem -2.5rem;
	padding: 1.5rem 2.5rem;
	border-radius: 0 0 25px 25px;
}

	.testimonial-metrics .metric {
	text-align: center;
	background: rgba(255, 255, 255, 0.9);
	padding: 1rem 1.5rem;
	border-radius: 20px;
	border: 2px solid var(--primary-blue);
	transition: all var(--transition-normal) cubic-bezier(0.34, 1.56, 0.64, 1);
	min-width: 120px;
	backdrop-filter: blur(5px);
	-webkit-backdrop-filter: blur(5px);
	box-shadow: 0 10px 30px rgba(70, 130, 180, 0.2);
	position: relative;
}

.testimonial-card:hover .metric {
	transform: translateY(-5px);
}

.testimonial-card:hover .metric:hover {
	transform: translateY(-10px) scale(1.1);
	z-index: 2;
}

	.testimonial-metrics .metric:hover {
		transform: translateY(-5px) scale(1.05);
		box-shadow: 0 15px 40px rgba(70, 130, 180, 0.4);
		border-color: var(--muted-orange);
		background: rgba(255, 255, 255, 0.95);
	}

	.testimonial-metrics .metric-value {
	display: block;
	font-size: 1.75rem;
	font-weight: 800;
	color: var(--primary-blue-dark);
	margin-bottom: 0.25rem;
	text-shadow: 0 2px 4px rgba(70, 130, 180, 0.3);
	transition: all 0.3s ease;
	position: relative;
}

.testimonial-card:hover .metric-value {
	text-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
}

.metric-value::after {
	content: '';
	position: absolute;
	bottom: -5px;
	left: 50%;
	width: 0;
	height: 2px;
	background: var(--primary-blue);
	transform: translateX(-50%);
	transition: width 0.3s ease;
}

.testimonial-card:hover .metric:hover .metric-value::after {
	width: 100%;
}

	.testimonial-metrics .metric-label {
	font-size: 0.875rem;
	color: var(--text-light);
	font-weight: 500;
	text-transform: uppercase;
	letter-spacing: 0.5px;
	transition: all 0.3s ease;
}

.testimonial-card:hover .metric:hover .metric-label {
	color: var(--primary-blue);
	font-weight: 600;
}

	/* Testimonial CTA */
	.testimonial-cta {
		background: var(--primary-blue);
		border-radius: 25px;
		padding: 3rem 2rem;
		text-align: center;
		margin-top: 4rem;
		position: relative;
		overflow: hidden;
		box-shadow: 0 30px 100px rgba(70, 130, 180, 0.4);
		border: 2px solid var(--primary-blue-dark);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		transition: all 0.5s ease;
	}

	.testimonial-cta:hover {
		transform: translateY(-5px);
		box-shadow: 0 40px 120px rgba(135, 206, 235, 0.4), 0 0 30px rgba(255, 255, 255, 0.3);
		border-color: rgba(255, 255, 255, 0.4);
	}

	.testimonial-cta::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: conic-gradient(from 0deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		animation: rotate 25s linear infinite;
		z-index: -1;
	}

	@keyframes rotate {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	.cta-content h3 {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--white);
		margin-bottom: 1.5rem;
		text-shadow: 0 4px 8px rgba(70, 130, 180, 0.4);
	}

	.cta-content p {
		font-size: 1.25rem;
		color: var(--white);
		margin-bottom: 2.5rem;
		line-height: 1.6;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		text-shadow: 0 2px 4px rgba(70, 130, 180, 0.3);
	}

	.cta-buttons {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-buttons .btn {
		font-size: 1.1rem;
		padding: 1rem 2.5rem;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
	}

	.cta-buttons .btn-primary {
		background: var(--white);
		color: var(--primary-blue-dark);
		border: 2px solid var(--white);
		font-weight: 700;
	}

	.cta-buttons .btn-primary:hover {
		background: var(--muted-green);
		color: var(--white);
		border-color: var(--muted-green);
		transform: translateY(-5px) scale(1.05);
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2), 0 0 20px rgba(152, 216, 200, 0.7);
		animation: button-glow 1.5s ease-in-out infinite alternate;
	}

	@keyframes button-glow {
		0% { box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2), 0 0 15px rgba(152, 216, 200, 0.5); }
		100% { box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2), 0 0 25px rgba(152, 216, 200, 0.8); }
	}

	.cta-buttons .btn-secondary {
		background: transparent;
		color: var(--white);
		border: 2px solid var(--muted-orange);
		font-weight: 700;
	}

	.cta-buttons .btn-secondary:hover {
		background: var(--muted-orange);
		color: var(--white);
		transform: translateY(-5px) scale(1.05);
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2), 0 0 20px rgba(244, 166, 96, 0.7);
		animation: button-pulse 1.5s ease-in-out infinite alternate;
	}

	@keyframes button-pulse {
		0% { transform: translateY(-5px) scale(1.05); }
		100% { transform: translateY(-8px) scale(1.08); }
	}

	/* Responsive adjustments for testimonials */
	@media (max-width: 768px) {
		.testimonials-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.testimonial-card {
			padding: 2rem;
		}

		.testimonial-header {
			flex-direction: column;
			text-align: center;
		}

		.testimonial-info {
			text-align: center;
		}

		.testimonial-metrics {
			gap: 1rem;
		}

		.testimonial-metrics .metric {
			min-width: 100px;
			padding: 0.875rem 1.25rem;
		}

		.testimonial-cta {
			padding: 2.5rem 1.5rem;
		}

		.testimonial-cta .cta-content h3 {
			font-size: 2rem;
		}

		.testimonial-cta .cta-content p {
			font-size: 1.1rem;
		}

		.testimonial-cta .cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}

	/* Additional animations */
	@keyframes float {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		50% { transform: translateY(-20px) rotate(5deg); }
	}

	/* Enhanced hover effects for testimonial cards */
	.testimonial-card::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(135, 206, 235, 0.05), rgba(152, 216, 200, 0.05));
		border-radius: 25px;
		opacity: 0;
		transition: opacity var(--transition-normal) ease;
		z-index: -1;
	}

	.testimonial-card:hover::after {
		opacity: 1;
	}

	/* Add 3D card tilt effect */
	.testimonial-card {
		transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
	}

	.testimonial-card:hover .testimonial-content {
		transform: translateZ(20px);
	}

	.testimonial-card:hover .testimonial-header {
		transform: translateZ(30px);
	}

	.testimonial-card:hover .testimonial-metrics {
		transform: translateZ(15px);
	}

	.testimonial-content, .testimonial-header, .testimonial-metrics {
		transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
	}

	/* Enhanced Pulse animation for testimonial metrics */
.testimonial-metrics .metric {
	position: relative;
	overflow: hidden;
}

.metric:hover .metric-value {
	animation: pulse 1.5s infinite;
	color: var(--primary-blue-dark);
}

.metric::before {
	content: '';
	position: absolute;
