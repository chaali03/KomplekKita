<style>
	/* Enhanced Footer with KomplekKita Logo Colors */
	.footer {
		background: linear-gradient(135deg, #334455 0%, #2c3e50 50%, #34495e 100%);
		color: #ffffff;
		padding: 6rem 0 3rem;
		position: relative;
		overflow: hidden;
		isolation: isolate;
		box-shadow: inset 0 10px 30px rgba(0, 0, 0, 0.3);
		border-top: 3px solid;
		border-image: linear-gradient(90deg, #99CCE5, #99C2B8, #EFA988) 1;
	}
	
	/* Rainbow border effect */
	.footer::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: linear-gradient(90deg, #99CCE5, #99C2B8, #EFA988, #99CCE5);
		background-size: 200% 100%;
		animation: rainbow-border 4s linear infinite;
		z-index: 2;
	}
	
	/* Floating particles with logo colors */
	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			radial-gradient(2px 2px at 20px 30px, #99CCE5, transparent),
			radial-gradient(2px 2px at 40px 70px, #99C2B8, transparent),
			radial-gradient(1px 1px at 90px 40px, #EFA988, transparent),
			radial-gradient(1px 1px at 130px 80px, #99CCE5, transparent),
			radial-gradient(2px 2px at 160px 30px, #99C2B8, transparent);
		background-repeat: repeat;
		background-size: 200px 100px;
		animation: sparkle 20s linear infinite;
		opacity: 0.3;
		z-index: 0;
	}
	
	/* Animated background elements with logo colors */
	.footer-bg-elements {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 0;
		overflow: hidden;
	}
	
	.footer-bg-element {
		position: absolute;
		border-radius: 50%;
		opacity: 0.08;
		filter: blur(40px);
	}
	
	.footer-bg-element-1 {
		width: 400px;
		height: 400px;
		top: -150px;
		right: 10%;
		background: radial-gradient(circle, #99CCE5 0%, transparent 70%);
		animation: pulse-rotate 30s ease-in-out infinite alternate;
	}
	
	.footer-bg-element-2 {
		width: 300px;
		height: 300px;
		bottom: -100px;
		left: 5%;
		background: radial-gradient(circle, #99C2B8 0%, transparent 70%);
		animation: pulse-rotate 25s ease-in-out 5s infinite alternate-reverse;
	}
	
	.footer-bg-element-3 {
		width: 200px;
		height: 200px;
		top: 30%;
		left: 20%;
		background: conic-gradient(from 0deg, #99CCE5, #99C2B8, #EFA988, #99CCE5);
		animation: float-rotate 40s linear infinite;
		opacity: 0.05;
	}
	
	.footer-bg-element-4 {
		width: 250px;
		height: 250px;
		top: 40%;
		right: 15%;
		background: conic-gradient(from 180deg, #EFA988, #99CCE5, #99C2B8, #EFA988);
		animation: float-rotate 35s linear infinite reverse;
		opacity: 0.05;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 4rem;
		margin-bottom: 3rem;
		position: relative;
		z-index: 1;
		backdrop-filter: blur(5px);
		-webkit-backdrop-filter: blur(5px);
	}

	.footer-brand {
		max-width: 300px;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.logo-container {
		position: relative;
		width: 40px;
		height: 40px;
	}

	.logo-glow {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: radial-gradient(circle, rgba(153, 204, 229, 0.8) 0%, transparent 70%);
		filter: blur(8px);
		opacity: 0;
		transition: opacity 0.5s ease;
		animation: pulse-glow 3s ease-in-out infinite alternate;
	}

	.footer-logo:hover .logo-glow {
		opacity: 0.7;
	}

	.footer-logo h3 {
		color: #99CCE5;
		font-size: 1.75rem;
		font-weight: 700;
		margin: 0;
		text-shadow: 0 0 10px rgba(153, 204, 229, 0.3);
		transition: all 0.3s ease;
		background: linear-gradient(135deg, #99CCE5, #99C2B8);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.footer-logo:hover h3 {
		background: linear-gradient(135deg, #ffffff, #99CCE5);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 0 15px rgba(153, 204, 229, 0.6);
	}

	.footer-brand p {
		color: #bdc3c7;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	.footer-social {
		display: flex;
		gap: 1rem;
	}

	.social-link {
		width: 45px;
		height: 45px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #ffffff;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
		border: 1px solid rgba(255, 255, 255, 0.2);
		position: relative;
		overflow: hidden;
		z-index: 1;
	}

	.social-hover-effect {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #99CCE5, #99C2B8);
		opacity: 0;
		transition: opacity 0.4s ease;
		z-index: -1;
		transform: scale(0.5);
		border-radius: 50%;
	}

	.social-link:hover {
		transform: translateY(-5px) scale(1.1);
		box-shadow: 0 15px 30px rgba(153, 204, 229, 0.4);
		color: #ffffff;
		border-color: #99CCE5;
	}

	.social-link:hover .social-hover-effect {
		opacity: 1;
		transform: scale(1);
	}

	.social-link i {
		transition: all 0.3s ease;
		position: relative;
		z-index: 2;
		font-size: 1.2rem;
	}

	.social-link:hover i {
		transform: scale(1.2) rotate(5deg);
		color: #ffffff;
	}

	.footer-sections {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.footer-section h4 {
		color: #99CCE5;
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		position: relative;
		display: inline-block;
		transition: all 0.3s ease;
		background: linear-gradient(135deg, #99CCE5, #99C2B8);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-underline {
		width: 40px;
		height: 3px;
		background: linear-gradient(90deg, #99CCE5, #99C2B8);
		border-radius: 3px;
		margin-bottom: 1.2rem;
		position: relative;
		transition: all 0.3s ease;
	}

	.footer-section:hover .section-underline {
		width: 60px;
		background: linear-gradient(90deg, #99CCE5, #99C2B8, #EFA988);
		background-size: 200% 100%;
		animation: gradient-shift 3s ease infinite;
	}

	.footer-section:hover h4 {
		background: linear-gradient(135deg, #ffffff, #99CCE5);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 0 10px rgba(153, 204, 229, 0.4);
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section li {
		margin-bottom: 0.75rem;
	}

	.footer-section a {
		color: #bdc3c7;
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
		position: relative;
		padding-left: 0;
		display: inline-flex;
		align-items: center;
		gap: 8px;
	}

	.link-icon {
		position: relative;
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 4px 0 4px 6px;
		border-color: transparent transparent transparent #99CCE5;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
	}

	.footer-section a:hover {
		color: #ffffff;
		padding-left: 10px;
		text-shadow: 0 0 8px rgba(255, 255, 255, 0.4);
	}

	.footer-section a:hover .link-icon {
		opacity: 1;
		transform: translateX(0);
	}

	.footer-divider {
		height: 1px;
		background: linear-gradient(90deg, transparent, #5d6d7e, transparent);
		margin: 2rem 0;
		position: relative;
	}

	.divider-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 30%;
		height: 1px;
		background: linear-gradient(90deg, transparent, #99CCE5, transparent);
		filter: blur(1px);
		opacity: 0.7;
		animation: divider-pulse 3s ease-in-out infinite alternate;
	}

	.footer-bottom {
		text-align: center;
		padding-top: 2rem;
		color: #95a5a6;
		position: relative;
		z-index: 1;
	}

	.copyright {
		transition: all 0.3s ease;
	}

	.copyright:hover {
		color: #ffffff;
		text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
	}

	.footer-bottom-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.footer-legal {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.legal-link {
		color: #95a5a6;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 0.875rem;
		position: relative;
		padding: 3px 0;
	}

	.legal-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 1px;
		background: linear-gradient(90deg, #99CCE5, #ffffff);
		transition: width 0.3s ease;
	}

	.legal-link:hover {
		color: #ffffff;
		text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
	}

	.legal-link:hover::after {
		width: 100%;
	}

	/* Enhanced footer decoration */
	.footer-decoration {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 0;
	}

	.footer-wave {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100px;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none"><path d="M0,0V46.29c47.79,22.2,103.59,8.12,149.2,8.12c56.27,0,113.84-12.21,168.54-25.73C348.36,20.11,421.77,7,497.66,7S643.67,20.11,723.2,28.54C777.92,41.2,835.56,54.41,891.8,54.41c45.66,0,101.41-13.89,149.2-28.21V0Z" fill="%23ffffff" opacity="0.05"/></svg>');
		background-size: cover;
		background-repeat: no-repeat;
		opacity: 0.15;
		animation: wave-animation 15s linear infinite alternate;
	}

	.footer-wave-2 {
		top: 20px;
		opacity: 0.1;
		height: 80px;
		animation: wave-animation 20s linear infinite alternate-reverse;
		filter: blur(2px);
	}

	/* Responsive footer */
	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.footer-sections {
			grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		}

		.footer-bottom-content {
			flex-direction: column;
			text-align: center;
		}

		.footer-legal {
			justify-content: center;
		}
	}

	/* New animations */
	@keyframes pulse-rotate {
		0% { transform: scale(1) rotate(0deg); opacity: 0.08; }
		50% { transform: scale(1.2) rotate(180deg); opacity: 0.12; }
		100% { transform: scale(1) rotate(360deg); opacity: 0.08; }
	}
	
	@keyframes float-rotate {
		0% { transform: translateY(0) rotate(0deg); }
		100% { transform: translateY(-20px) rotate(360deg); }
	}
	
	@keyframes pulse-glow {
		0% { opacity: 0.3; transform: scale(1); }
		100% { opacity: 0.7; transform: scale(1.15); }
	}
	
	@keyframes gradient-shift {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
	
	@keyframes divider-pulse {
		0% { opacity: 0.5; width: 20%; }
		100% { opacity: 0.8; width: 40%; }
	}
	
	@keyframes wave-animation {
		0% { transform: translateX(0) translateY(0); }
		50% { transform: translateX(-1%) translateY(5px); }
		100% { transform: translateX(1%) translateY(-5px); }
	}
	
	@keyframes sparkle {
		0% { transform: translateY(0); }
		100% { transform: translateY(-100px); }
	}
	
	@keyframes rainbow-border {
		0% { background-position: 0% 50%; }
		100% { background-position: 200% 50%; }
	}
</style>

