<script>
	document.addEventListener('DOMContentLoaded', function() {
		// FAQ Card Toggle
	const faqCards = document.querySelectorAll('.faq-card');
	faqCards.forEach(card => {
		const toggle = card.querySelector('.card-toggle') as HTMLElement;
		if (!toggle) return;
		toggle.addEventListener('click', () => {
				// Close all other cards
				faqCards.forEach(otherCard => {
					if (otherCard !== card && otherCard.classList.contains('active')) {
						otherCard.classList.remove('active');
					}
				});
				
				// Toggle current card
				card.classList.toggle('active');
				
				// Add ripple effect
				const ripple = document.createElement('span');
				ripple.classList.add('ripple');
				ripple.style.position = 'absolute';
				ripple.style.borderRadius = '50%';
				ripple.style.transform = 'scale(0)';
				ripple.style.animation = 'ripple 0.6s linear';
				ripple.style.backgroundColor = 'rgba(59, 130, 246, 0.2)';
				
		const rect = toggle.getBoundingClientRect();
		ripple.style.width = ripple.style.height = Math.max(rect.width, rect.height) * 2 + 'px';
		ripple.style.left = -rect.width / 2 + 'px';
		ripple.style.top = -rect.height / 2 + 'px';
		
		if (toggle) toggle.appendChild(ripple);
				
				setTimeout(() => {
					ripple.remove();
				}, 600);
			});
		});
		
		// FAQ Tab Filtering
	const faqTabs = document.querySelectorAll('.faq-tab');
	const tabIndicator = document.querySelector('.tab-indicator') as HTMLElement;
		
	// Initialize tab indicator position
	if (tabIndicator) {
		const activeTab = document.querySelector('.faq-tab.active') as HTMLElement;
		if (activeTab) {
			const tabRect = activeTab.getBoundingClientRect();
			const tabsContainer = document.querySelector('.faq-tabs') as HTMLElement;
			if (tabsContainer) {
				const tabsRect = tabsContainer.getBoundingClientRect();
				tabIndicator.style.width = tabRect.width + 'px';
				tabIndicator.style.left = (tabRect.left - tabsRect.left + 0.5) + 'px';
			}
			}
		}
		
		faqTabs.forEach(tab => {
			tab.addEventListener('click', () => {
				// Update active tab
				faqTabs.forEach(t => t.classList.remove('active'));
				tab.classList.add('active');
				
		// Move tab indicator
		if (tabIndicator) {
			const tabRect = tab.getBoundingClientRect();
			const tabsContainer = document.querySelector('.faq-tabs') as HTMLElement;
			if (tabsContainer) {
				const tabsRect = tabsContainer.getBoundingClientRect();
				tabIndicator.style.width = tabRect.width + 'px';
				tabIndicator.style.left = (tabRect.left - tabsRect.left + 0.5) + 'px';
			}
				}
				
		// Filter cards
		const tabElement = tab as HTMLElement;
		const category = tabElement.dataset.tab;
		const cards = document.querySelectorAll('.faq-card');
		
		cards.forEach(card => {
			const cardElement = card as HTMLElement;
			if (category === 'all' || cardElement.dataset.category === category) {
				cardElement.style.display = '';
				setTimeout(() => {
					cardElement.style.opacity = '1';
					cardElement.style.transform = '';
				}, 10);
			} else {
				cardElement.style.opacity = '0';
				cardElement.style.transform = 'translateY(20px)';
				setTimeout(() => {
					cardElement.style.display = 'none';
				}, 300);
			}
		});
			});
		});
		
		// 3D Card Tilt Effect
	const cards = document.querySelectorAll('.faq-card');
	cards.forEach(card => {
		const cardElement = card as HTMLElement;
		cardElement.addEventListener('mousemove', (e: MouseEvent) => {
			const cardRect = cardElement.getBoundingClientRect();
			const cardWidth = cardRect.width;
			const cardHeight = cardRect.height;
			const centerX = cardRect.left + cardWidth / 2;
			const centerY = cardRect.top + cardHeight / 2;
			const mouseX = e.clientX - centerX;
			const mouseY = e.clientY - centerY;
			const rotateX = (mouseY / (cardHeight / 2)) * -3;
			const rotateY = (mouseX / (cardWidth / 2)) * 3;
			
			cardElement.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(10px)`;
			
			const shine = cardElement.querySelector('.card-shine') as HTMLElement;
			if (shine) {
				const shineX = (mouseX / cardWidth) * 100 + 50;
				const shineY = (mouseY / cardHeight) * 100 + 50;
				shine.style.background = `radial-gradient(circle at ${shineX}% ${shineY}%, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 50%)`;
			}
		});
		
		cardElement.addEventListener('mouseleave', () => {
			cardElement.style.transform = '';
			const shine = cardElement.querySelector('.card-shine') as HTMLElement;
			if (shine) {
				shine.style.background = '';
			}
		});
		});
		
		// Enhanced animation for feature tags
		const featureTags = document.querySelectorAll('.feature-tag');
	featureTags.forEach((tag, index) => {
		const tagElement = tag as HTMLElement;
		const delay = index * 50;
		tagElement.style.transitionDelay = `${delay}ms`;
		
		tagElement.addEventListener('mouseenter', () => {
			tagElement.style.transform = 'translateY(-5px) scale(1.05)';
			
			const parent = tagElement.parentElement;
			if (parent) {
				const siblings = parent.querySelectorAll('.feature-tag');
				siblings.forEach(sibling => {
					const siblingElement = sibling as HTMLElement;
					if (siblingElement !== tagElement) {
						siblingElement.style.transform = 'translateY(-2px) scale(0.98)';
						siblingElement.style.opacity = '0.7';
					}
				});
			}
		});
		
		tagElement.addEventListener('mouseleave', () => {
			tagElement.style.transform = '';
			
			const parent = tagElement.parentElement;
			if (parent) {
				const siblings = parent.querySelectorAll('.feature-tag');
				siblings.forEach(sibling => {
					const siblingElement = sibling as HTMLElement;
					if (siblingElement !== tagElement) {
						siblingElement.style.transform = '';
						siblingElement.style.opacity = '';
					}
				});
			}
		});
		
		setTimeout(() => {
			tagElement.style.transform = 'translateY(-5px) scale(1.05)';
			setTimeout(() => {
				tagElement.style.transform = '';
			}, 300);
		}, 1000 + delay);
		});
		
	// Enhanced ripple effect for CTA button
	const ctaButton = document.querySelector('.faq-cta .btn') as HTMLElement;
	if (ctaButton) {
		ctaButton.addEventListener('click', (e: MouseEvent) => {
			const rect = ctaButton.getBoundingClientRect();
			const x = e.clientX - rect.left;
			const y = e.clientY - rect.top;
			
			const existingRipples = ctaButton.querySelectorAll('.ripple');
			existingRipples.forEach(r => r.remove());
			
			const ripple = document.createElement('span');
			ripple.classList.add('ripple');
			ripple.style.position = 'absolute';
			ripple.style.borderRadius = '50%';
			ripple.style.transform = 'scale(0)';
			ripple.style.animation = 'ripple 0.8s cubic-bezier(0.16, 1, 0.3, 1)';
			ripple.style.backgroundColor = 'rgba(255, 255, 255, 0.8)';
			ripple.style.width = ripple.style.height = Math.max(rect.width, rect.height) * 2.5 + 'px';
			ripple.style.left = `${x - (Math.max(rect.width, rect.height) * 1.25)}px`;
			ripple.style.top = `${y - (Math.max(rect.width, rect.height) * 1.25)}px`;
			ripple.style.pointerEvents = 'none';
			ripple.style.zIndex = '1';
			
			ctaButton.appendChild(ripple);
			
			ctaButton.style.transform = 'scale(0.98)';
			setTimeout(() => {
				ctaButton.style.transform = '';
			}, 200);
			
			setTimeout(() => {
				ripple.remove();
			}, 800);
		});
		
		ctaButton.addEventListener('mouseenter', () => {
			const btnText = ctaButton.querySelector('.btn-text') as HTMLElement;
			const btnIcon = ctaButton.querySelector('.btn-icon') as HTMLElement;
			
			if (btnText) btnText.style.transform = 'translateX(-3px)';
			if (btnIcon) btnIcon.style.transform = 'translateX(3px)';
		});
		
		ctaButton.addEventListener('mouseleave', () => {
			const btnText = ctaButton.querySelector('.btn-text') as HTMLElement;
			const btnIcon = ctaButton.querySelector('.btn-icon') as HTMLElement;
			
			if (btnText) btnText.style.transform = '';
			if (btnIcon) btnIcon.style.transform = '';
		});
		}
	});
</script>

